---
// Modal para Solicitar Diagnóstico
---

<div id="diagnostico-modal" class="modal-overlay" style="display: none;">
  <div class="modal-container">
    <div class="modal-header">
      <h2 class="modal-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10 9 9 9 8 9"></polyline>
        </svg>
        Solicita tu Diagnóstico Gratuito
      </h2>
      <button class="modal-close" data-modal="diagnostico-modal" aria-label="Cerrar">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <form id="diagnostico-form" class="modal-form">
      <div class="form-group">
        <label for="diag-nombre" class="form-label">Nombre completo <span class="required">*</span></label>
        <input type="text" id="diag-nombre" name="nombre" class="form-input" required placeholder="Tu nombre completo">
      </div>

      <div class="form-group">
        <label for="diag-telefono" class="form-label">Teléfono <span class="required">*</span></label>
        <input type="tel" id="diag-telefono" name="telefono" class="form-input" required placeholder="+57 300 123 4567">
      </div>

      <div class="form-group">
        <label for="diag-email" class="form-label">Email</label>
        <input type="email" id="diag-email" name="email" class="form-input" placeholder="tu@email.com">
      </div>

      <div class="form-group">
        <label for="diag-sede" class="form-label">Sede <span class="required">*</span></label>
        <select id="diag-sede" name="sede" class="form-input" required>
          <option value="">Selecciona una sede</option>
          <option value="monteria" data-phone="+573205085531">Montería</option>
          <option value="cartagena" data-phone="+573023262268">Cartagena</option>
          <option value="apartado" data-phone="+573023262239">Apartadó</option>
        </select>
      </div>

      <div class="form-group">
        <label for="diag-marca" class="form-label">Marca del equipo <span class="required">*</span></label>
        <select id="diag-marca" name="marca" class="form-input" required>
          <option value="">Selecciona la marca</option>
          <option value="Kärcher">Kärcher</option>
          <option value="Makita">Makita</option>
          <option value="Otra">Otra marca</option>
        </select>
      </div>

      <div class="form-group">
        <label for="diag-modelo" class="form-label">Modelo del equipo</label>
        <input type="text" id="diag-modelo" name="modelo" class="form-input" placeholder="Ej: K5, K7, WD3, etc.">
      </div>

      <div class="form-group">
        <label for="diag-problema" class="form-label">Describe el problema <span class="required">*</span></label>
        <textarea id="diag-problema" name="problema" class="form-textarea" rows="4" required placeholder="Describe qué le sucede a tu equipo: no enciende, pierde presión, hace ruidos extraños, etc."></textarea>
      </div>

      <div class="form-group">
        <label class="form-label">¿Dónde prefieres el diagnóstico?</label>
        <div class="radio-group">
          <label class="radio-option">
            <input type="radio" name="tipo_servicio" value="en_sede" checked>
            <span>En sede (llevaré el equipo)</span>
          </label>
          <label class="radio-option">
            <input type="radio" name="tipo_servicio" value="domicilio">
            <span>A domicilio (visita técnica)</span>
          </label>
        </div>
      </div>

      <div class="info-box">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="16" x2="12" y2="12"></line>
          <line x1="12" y1="8" x2="12.01" y2="8"></line>
        </svg>
        <p><strong>Diagnóstico gratuito:</strong> Evaluaremos tu equipo sin costo. Solo pagas si decides realizar la reparación.</p>
      </div>

      <div class="form-actions">
        <button type="button" class="btn-secondary" data-modal="diagnostico-modal">Cancelar</button>
        <button type="submit" class="btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
          </svg>
          Enviar por WhatsApp
        </button>
      </div>
    </form>
  </div>
</div>

<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-4);
    animation: fadeIn 0.2s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .modal-container {
    background: white;
    border-radius: var(--radius-2xl);
    max-width: 600px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    animation: slideUp 0.3s ease;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-6);
    border-bottom: 2px solid var(--color-gray-100);
    position: sticky;
    top: 0;
    background: white;
    z-index: 1;
  }

  .modal-title {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: #1a1a2e;
    margin: 0;
  }

  .modal-title svg {
    color: #FFD700;
  }

  .modal-close {
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--spacing-2);
    border-radius: var(--radius-md);
    transition: all 0.2s ease;
    color: var(--color-gray-500);
  }

  .modal-close:hover {
    background: var(--color-gray-100);
    color: var(--color-gray-700);
  }

  .modal-form {
    padding: var(--spacing-6);
  }

  .form-group {
    margin-bottom: var(--spacing-4);
  }

  .form-label {
    display: block;
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: #1a1a2e;
    margin-bottom: var(--spacing-2);
  }

  .required {
    color: #ef4444;
  }

  .form-input,
  .form-textarea {
    width: 100%;
    padding: var(--spacing-3) var(--spacing-4);
    border: 2px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    font-size: var(--text-base);
    font-family: var(--font-primary);
    transition: all 0.2s ease;
    background: white;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: #FFD700;
    box-shadow: 0 0 0 4px rgba(255, 215, 0, 0.15);
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .radio-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
  }

  .radio-option {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-3);
    border: 2px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .radio-option:hover {
    border-color: #FFD700;
    background: rgba(255, 215, 0, 0.05);
  }

  .radio-option input[type="radio"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
  }

  .radio-option input[type="radio"]:checked + span {
    font-weight: var(--font-semibold);
    color: #1a1a2e;
  }

  .info-box {
    display: flex;
    gap: var(--spacing-3);
    padding: var(--spacing-4);
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.08) 0%, rgba(16, 185, 129, 0.03) 100%);
    border-left: 4px solid #10b981;
    border-radius: var(--radius-lg);
    margin-bottom: var(--spacing-4);
  }

  .info-box svg {
    flex-shrink: 0;
    color: #10b981;
    margin-top: 2px;
  }

  .info-box p {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-gray-700);
    line-height: 1.5;
  }

  .form-actions {
    display: flex;
    gap: var(--spacing-3);
    justify-content: flex-end;
    margin-top: var(--spacing-6);
    padding-top: var(--spacing-6);
    border-top: 2px solid var(--color-gray-100);
  }

  .btn-primary,
  .btn-secondary {
    padding: var(--spacing-3) var(--spacing-6);
    border-radius: var(--radius-lg);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
  }

  .btn-primary {
    background: linear-gradient(135deg, #FFD700 0%, #FFC700 100%);
    color: #1a1a2e;
    box-shadow: 0 4px 12px rgba(255, 215, 0, 0.3);
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #FFC700 0%, #FFB700 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(255, 215, 0, 0.4);
  }

  .btn-secondary {
    background: white;
    color: var(--color-gray-700);
    border: 2px solid var(--color-gray-300);
  }

  .btn-secondary:hover {
    background: var(--color-gray-50);
    border-color: var(--color-gray-400);
  }

  @media (max-width: 640px) {
    .modal-container {
      max-height: 100vh;
      border-radius: 0;
    }

    .form-actions {
      flex-direction: column-reverse;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<script is:inline>
  (function() {
    function initDiagnosticoModal() {
      const diagnosticoForm = document.getElementById('diagnostico-form');
      const diagnosticoModal = document.getElementById('diagnostico-modal');

      if (!diagnosticoForm || !diagnosticoModal) {
        console.error('Modal o formulario de diagnóstico no encontrado');
        return;
      }

      console.log('Modal de diagnóstico inicializado');

      diagnosticoForm.addEventListener('submit', function(e) {
        e.preventDefault();

        const formData = new FormData(diagnosticoForm);
        const nombre = formData.get('nombre');
        const telefono = formData.get('telefono');
        const email = formData.get('email') || 'No proporcionado';
        const sedeSelect = document.getElementById('diag-sede');
        const sede = sedeSelect.options[sedeSelect.selectedIndex].text;
        const phoneNumber = sedeSelect.options[sedeSelect.selectedIndex].dataset.phone;
        const marca = formData.get('marca');
        const modelo = formData.get('modelo') || 'No especificado';
        const problema = formData.get('problema');
        const tipoServicio = formData.get('tipo_servicio');
        const tipoServicioTexto = tipoServicio === 'en_sede' ? 'En sede (llevaré el equipo)' : 'A domicilio (visita técnica)';

        const mensaje = 'Hola, necesito solicitar un diagnóstico gratuito para mi equipo:\n\n' +
          '*Datos de contacto:*\n' +
          '- Nombre: ' + nombre + '\n' +
          '- Teléfono: ' + telefono + '\n' +
          '- Email: ' + email + '\n\n' +
          '*Información del equipo:*\n' +
          '- Marca: ' + marca + '\n' +
          '- Modelo: ' + modelo + '\n' +
          '- Problema: ' + problema + '\n\n' +
          '*Servicio:*\n' +
          '- Sede seleccionada: ' + sede + '\n' +
          '- Tipo de servicio: ' + tipoServicioTexto + '\n\n' +
          'Espero su respuesta para coordinar el diagnóstico. ¡Gracias!';

        const mensajeCodificado = encodeURIComponent(mensaje);
        const whatsappUrl = 'https://wa.me/' + phoneNumber + '?text=' + mensajeCodificado;

        // Abrir WhatsApp
        window.open(whatsappUrl, '_blank');

        // Cerrar modal y resetear formulario
        diagnosticoModal.style.display = 'none';
        diagnosticoForm.reset();
      });

      // Cerrar modal al hacer clic en el overlay
      diagnosticoModal.addEventListener('click', function(e) {
        if (e.target === diagnosticoModal) {
          diagnosticoModal.style.display = 'none';
        }
      });

      // Cerrar modal con botón de cerrar
      const closeBtn = diagnosticoModal.querySelector('.modal-close');
      if (closeBtn) {
        closeBtn.addEventListener('click', function() {
          diagnosticoModal.style.display = 'none';
        });
      }
    }

    // Ejecutar cuando el DOM esté listo
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initDiagnosticoModal);
    } else {
      initDiagnosticoModal();
    }
  })();
</script>
