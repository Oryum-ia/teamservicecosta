---
// Statistics Section - Miro Style
const stats = [
  {
    value: '3',
    label: 'Ubicaciones en la Costa Caribe'
  },
  {
    value: '15+',
    label: 'Años de experiencia'
  },
  {
    value: '5000+',
    label: 'Equipos reparados'
  },
  {
    value: '99%',
    label: 'Clientes satisfechos'
  }
];
---

<section class="stats-section">
  <div class="container">
    <div class="stats-header">
      <h2 class="stats-title">
        Por qué confiar en <br />Team Service Costa
      </h2>
      <a href="#contacto" class="stats-link">
        Visita nuestras sedes
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14"></path>
          <path d="m12 5 7 7-7 7"></path>
        </svg>
      </a>
    </div>

    <div class="stats-grid">
      {stats.map(stat => (
        <div class="stat-card">
          <div class="stat-value">{stat.value}</div>
          <div class="stat-label">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .stats-section {
    background: var(--color-primary);
    padding: var(--spacing-24) 0;
    position: relative;
    overflow: hidden;
  }

  .stats-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 20% 30%, rgba(255, 187, 0, 0.3) 0%, transparent 40%),
      radial-gradient(circle at 80% 70%, rgba(255, 187, 0, 0.2) 0%, transparent 40%);
    pointer-events: none;
  }

  .container {
    position: relative;
    z-index: 1;
  }

  .stats-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--spacing-16);
    gap: var(--spacing-8);
  }

  .stats-title {
    font-size: var(--text-5xl);
    font-weight: var(--font-black);
    color: var(--color-black);
    line-height: 1.1;
    margin: 0;
    letter-spacing: -0.03em;
  }

  .stats-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-black);
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: all var(--transition-fast);
    white-space: nowrap;
    margin-top: var(--spacing-2);
  }

  .stats-link:hover {
    gap: var(--spacing-3);
    opacity: 0.8;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-8);
  }

  .stat-card {
    background: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-10) var(--spacing-8);
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.4);
    transition: all var(--transition-base);
  }

  .stat-card:hover {
    transform: translateY(-4px);
    background: rgba(255, 255, 255, 0.4);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .stat-value {
    font-size: var(--text-6xl);
    font-weight: var(--font-black);
    color: var(--color-black);
    line-height: 1;
    margin-bottom: var(--spacing-4);
    letter-spacing: -0.03em;
  }

  .stat-label {
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    color: var(--color-gray-800);
    line-height: 1.4;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .stats-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-6);
    }

    .stats-title {
      font-size: var(--text-4xl);
    }
  }

  @media (max-width: 640px) {
    .stats-section {
      padding: var(--spacing-16) 0;
    }

    .stats-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-4);
    }

    .stat-card {
      padding: var(--spacing-8) var(--spacing-6);
    }

    .stat-value {
      font-size: var(--text-5xl);
    }

    .stats-title {
      font-size: var(--text-3xl);
    }
  }
</style>
