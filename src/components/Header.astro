---
// Header Component - Navigation Bar
---

<header class="header">
  <div class="container">
    <nav class="nav">
      <div class="nav-brand">
        <a href="/" class="logo">
          <span class="logo-team">TEAM</span>
          <span class="logo-service">SERVICE</span>
          <span class="logo-costa">COSTA</span>
        </a>
        <p class="logo-subtitle">Servicio TÃ©cnico Especializado</p>
      </div>

      <button class="nav-toggle" aria-label="Toggle menu">
        <span class="hamburger"></span>
      </button>

      <ul class="nav-menu">
        <li><a href="/" class="nav-link">INICIO</a></li>
        <li><a href="#nosotros" class="nav-link">NOSOTROS</a></li>
        <li><a href="#servicios" class="nav-link">SERVICIOS</a></li>
        <li><a href="#contacto" class="nav-link">CONTACTO</a></li>
        <li><a href="/tienda" class="nav-link">TIENDA</a></li>
      </ul>

      <div class="nav-actions">
        <a href="/carrito" class="cart-btn">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          <span class="cart-badge">0</span>
        </a>
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    background: var(--color-white);
    box-shadow: var(--shadow-sm);
    position: sticky;
    top: 0;
    z-index: 1000;
    border-bottom: 3px solid var(--color-primary);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-4) 0;
    gap: var(--spacing-8);
  }

  /* Logo Branding */
  .nav-brand {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
    font-size: var(--text-xl);
    font-weight: var(--font-extrabold);
    text-decoration: none;
    line-height: 1;
  }

  .logo-team {
    color: var(--color-secondary);
  }

  .logo-service {
    color: var(--color-primary-dark);
  }

  .logo-costa {
    color: var(--color-secondary);
  }

  .logo-subtitle {
    font-size: var(--text-xs);
    color: var(--color-gray-500);
    font-weight: var(--font-medium);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Navigation Menu */
  .nav-menu {
    display: flex;
    list-style: none;
    gap: var(--spacing-8);
    margin: 0;
    padding: 0;
  }

  .nav-link {
    color: var(--color-gray-700);
    font-weight: var(--font-semibold);
    font-size: var(--text-sm);
    text-decoration: none;
    padding: var(--spacing-2) 0;
    position: relative;
    transition: color var(--transition-fast);
    letter-spacing: 0.5px;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-primary);
    transition: width var(--transition-base);
  }

  .nav-link:hover {
    color: var(--color-secondary);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  /* Cart Button */
  .nav-actions {
    display: flex;
    align-items: center;
    gap: var(--spacing-4);
  }

  .cart-btn {
    position: relative;
    color: var(--color-secondary);
    padding: var(--spacing-2);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-fast);
    border-radius: var(--radius-md);
  }

  .cart-btn:hover {
    background: var(--color-gray-100);
    color: var(--color-primary-dark);
  }

  .cart-badge {
    position: absolute;
    top: -4px;
    right: -4px;
    background: var(--color-primary);
    color: var(--color-secondary);
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    width: 20px;
    height: 20px;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--color-white);
  }

  /* Mobile Toggle Button */
  .nav-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--spacing-2);
  }

  .hamburger {
    width: 24px;
    height: 2px;
    background: var(--color-secondary);
    position: relative;
    transition: all var(--transition-base);
  }

  .hamburger::before,
  .hamburger::after {
    content: '';
    position: absolute;
    width: 24px;
    height: 2px;
    background: var(--color-secondary);
    transition: all var(--transition-base);
  }

  .hamburger::before {
    top: -8px;
  }

  .hamburger::after {
    bottom: -8px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .nav {
      flex-wrap: wrap;
    }

    .nav-toggle {
      display: flex;
      order: 3;
    }

    .nav-menu {
      display: none;
      flex-direction: column;
      width: 100%;
      order: 4;
      gap: 0;
      margin-top: var(--spacing-4);
      padding: var(--spacing-4) 0;
      border-top: 1px solid var(--color-gray-200);
    }

    .nav-menu.active {
      display: flex;
    }

    .nav-link {
      padding: var(--spacing-3) 0;
      font-size: var(--text-base);
    }

    .nav-actions {
      order: 2;
    }

    .logo {
      font-size: var(--text-lg);
    }

    .logo-subtitle {
      font-size: 0.65rem;
    }
  }
</style>

<script>
  // Mobile menu toggle
  const navToggle = document.querySelector('.nav-toggle');
  const navMenu = document.querySelector('.nav-menu');

  if (navToggle && navMenu) {
    navToggle.addEventListener('click', () => {
      navMenu.classList.toggle('active');
    });
  }
</script>
