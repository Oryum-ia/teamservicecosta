---
// Product Detail Modal Component
---

<div id="product-detail-modal" class="modal" aria-hidden="true">
  <div class="modal-overlay"></div>
  <div class="modal-content">
    <button class="modal-close" aria-label="Cerrar">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="modal-body">
      <div class="product-gallery">
        <div class="main-image">
          <img id="modal-product-image" src="" alt="" />
        </div>
      </div>

      <div class="product-details">
        <div class="product-badge" id="modal-product-badge">
          <span class="badge-dot"></span>
          <span class="badge-text">Disponible</span>
        </div>

        <h2 id="modal-product-name" class="product-title">Nombre del Producto</h2>
        <p id="modal-product-model" class="product-model">Modelo</p>

        <div class="product-price-section">
          <div class="price-main">
            <span class="price-currency">COP</span>
            <span id="modal-product-price" class="price-value">$0</span>
          </div>
          <p class="price-note">IVA incluido</p>
        </div>

        <div class="product-features">
          <h3>Características destacadas</h3>
          <ul id="modal-product-features">
            <li>Potencia profesional para limpieza profunda</li>
            <li>Diseño ergonómico y fácil de usar</li>
            <li>Garantía oficial KÄRCHER de 2 años</li>
            <li>Accesorios incluidos de alta calidad</li>
          </ul>
        </div>

        <div class="product-info-grid">
          <div class="info-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <div>
              <strong>Entrega</strong>
              <p>Inmediata en nuestras sedes</p>
            </div>
          </div>
          <div class="info-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
            <div>
              <strong>Garantía</strong>
              <p>2 años oficial KÄRCHER</p>
            </div>
          </div>
        </div>

        <div class="product-actions-modal">
          <a href="https://wa.me/573205085531" target="_blank" class="btn-whatsapp-modal">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
            </svg>
            Consultar por WhatsApp
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10000;
    display: none;
    pointer-events: none;
  }

  .modal[aria-hidden="false"] {
    display: block;
    pointer-events: auto;
  }

  .modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0);
    transition: background 0.3s ease;
    backdrop-filter: blur(0px);
  }

  .modal[aria-hidden="false"] .modal-overlay {
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(8px);
  }

  .modal-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.9);
    width: 90%;
    max-width: 1000px;
    max-height: 90vh;
    background: var(--color-white);
    border-radius: var(--radius-2xl);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    opacity: 0;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    overflow: hidden;
  }

  .modal[aria-hidden="false"] .modal-content {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }

  .modal-close {
    position: absolute;
    top: var(--spacing-4);
    right: var(--spacing-4);
    z-index: 10;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    border: none;
    border-radius: var(--radius-full);
    color: var(--color-white);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .modal-close:hover {
    background: rgba(0, 0, 0, 0.8);
    transform: rotate(90deg);
  }

  .modal-body {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-8);
    padding: var(--spacing-8);
    overflow-y: auto;
    max-height: 90vh;
  }

  /* Gallery */
  .product-gallery {
    position: sticky;
    top: 0;
    height: fit-content;
  }

  .main-image {
    aspect-ratio: 1;
    background: linear-gradient(135deg, #FAFAFA 0%, #F4F4F5 100%);
    border-radius: var(--radius-xl);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-8);
  }

  .main-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Details */
  .product-details {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-6);
  }

  .product-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    width: fit-content;
    padding: var(--spacing-2) var(--spacing-4);
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    color: #16a34a;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .product-badge.unavailable {
    background: rgba(239, 68, 68, 0.1);
    border-color: rgba(239, 68, 68, 0.3);
    color: #dc2626;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #16a34a;
    animation: pulse-dot 2s infinite;
  }

  .unavailable .badge-dot {
    background: #dc2626;
  }

  @keyframes pulse-dot {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .product-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-extrabold);
    color: var(--color-black);
    line-height: 1.2;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .product-model {
    font-size: var(--text-base);
    color: var(--color-gray-600);
    margin: 0;
    font-weight: var(--font-medium);
  }

  .product-price-section {
    padding: var(--spacing-6);
    background: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-white) 100%);
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-gray-200);
  }

  .price-main {
    display: flex;
    align-items: baseline;
    gap: var(--spacing-2);
    margin-bottom: var(--spacing-1);
  }

  .price-currency {
    font-size: var(--text-sm);
    color: var(--color-gray-500);
    font-weight: var(--font-semibold);
  }

  .price-value {
    font-size: var(--text-4xl);
    font-weight: var(--font-black);
    color: var(--color-black);
    line-height: 1;
    letter-spacing: -0.02em;
  }

  .price-note {
    font-size: var(--text-xs);
    color: var(--color-gray-500);
    margin: 0;
  }

  .product-features {
    padding: var(--spacing-6);
    background: var(--color-gray-50);
    border-radius: var(--radius-xl);
  }

  .product-features h3 {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-black);
    margin: 0 0 var(--spacing-4) 0;
  }

  .product-features ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
  }

  .product-features li {
    font-size: var(--text-sm);
    color: var(--color-gray-700);
    padding-left: var(--spacing-6);
    position: relative;
  }

  .product-features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: var(--font-bold);
  }

  .product-info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-4);
  }

  .info-item {
    display: flex;
    gap: var(--spacing-3);
    padding: var(--spacing-4);
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .info-item svg {
    flex-shrink: 0;
    color: var(--color-accent);
  }

  .info-item strong {
    display: block;
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    color: var(--color-black);
    margin-bottom: var(--spacing-1);
  }

  .info-item p {
    font-size: var(--text-xs);
    color: var(--color-gray-600);
    margin: 0;
  }

  .product-actions-modal {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
    padding-top: var(--spacing-4);
    border-top: 1px solid var(--color-gray-200);
  }

  .btn-whatsapp-modal {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
    padding: var(--spacing-4) var(--spacing-6);
    border-radius: var(--radius-lg);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    text-decoration: none;
    cursor: pointer;
    transition: all var(--transition-base);
    font-family: var(--font-primary);
    border: none;
    background: #25D366;
    color: var(--color-white);
    box-shadow: 0 4px 14px rgba(37, 211, 102, 0.3);
  }

  .btn-whatsapp-modal:hover {
    background: #20BA5A;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(37, 211, 102, 0.4);
  }

  /* Responsive */
  @media (max-width: 968px) {
    .modal-body {
      grid-template-columns: 1fr;
      padding: var(--spacing-6);
    }

    .product-gallery {
      position: relative;
    }

    .product-title {
      font-size: var(--text-2xl);
    }

    .price-value {
      font-size: var(--text-3xl);
    }

    .product-info-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .modal-content {
      width: 95%;
      max-height: 95vh;
    }

    .modal-body {
      padding: var(--spacing-4);
    }

    .product-title {
      font-size: var(--text-xl);
    }

    .price-value {
      font-size: var(--text-2xl);
    }
  }
</style>

<script>
  const modal = document.getElementById('product-detail-modal');
  const overlay = modal?.querySelector('.modal-overlay');
  const closeBtn = modal?.querySelector('.modal-close');

  // Close modal function
  function closeModal() {
    modal?.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
  }

  // Open modal function
  function openModal(productData: any) {
    // Update modal content
    const image = document.getElementById('modal-product-image') as HTMLImageElement;
    const name = document.getElementById('modal-product-name');
    const model = document.getElementById('modal-product-model');
    const price = document.getElementById('modal-product-price');
    const badge = document.getElementById('modal-product-badge');

    if (image) image.src = productData.image || '';
    if (image) image.alt = productData.name;
    if (name) name.textContent = productData.name;
    if (model) model.textContent = productData.model;
    if (price) price.textContent = `$ ${productData.price}`;

    if (badge) {
      if (productData.available) {
        badge.className = 'product-badge';
        badge.querySelector('.badge-text')!.textContent = 'Disponible';
      } else {
        badge.className = 'product-badge unavailable';
        badge.querySelector('.badge-text')!.textContent = 'Agotado';
      }
    }

    modal?.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
  }

  // Event listeners
  closeBtn?.addEventListener('click', closeModal);
  overlay?.addEventListener('click', closeModal);

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal?.getAttribute('aria-hidden') === 'false') {
      closeModal();
    }
  });

  // Make function available globally
  (window as any).openProductDetailModal = openModal;
</script>
