---
// Footer Component - Miro Style
const locations = [
  {
    city: 'Montería',
    address: 'Calle 40 # 2-55 Centro, Barrio Nariño',
    phone: '+57 320 508 5531'
  },
  {
    city: 'Cartagena',
    address: 'Calle 30 #21-137 local 4, Pie de La Popa',
    phone: '+57 320 508 5531'
  },
  {
    city: 'Apartadó',
    address: 'Calle 91 #98-23, Barrio Manzanares',
    phone: '+57 320 508 5531'
  }
];

const footerLinks = {
  product: [
    { label: 'Hidrolavadoras', href: '/tienda?category=hidrolavadoras' },
    { label: 'Aspiradoras', href: '/tienda?category=aspiradoras' },
    { label: 'Accesorios', href: '/tienda?category=limpieza' },
    { label: 'Repuestos', href: '/tienda?category=profesional' }
  ],
  services: [
    { label: 'Reparación', href: '/#servicios' },
    { label: 'Mantenimiento', href: '/#servicios' },
    { label: 'Asesoría', href: '/#servicios' },
    { label: 'Garantía', href: '/#servicios' }
  ],
  company: [
    { label: 'Nosotros', href: '/quienes-somos' },
    { label: 'Ubicaciones', href: '/#contacto' },
    { label: 'Contacto', href: '/#contacto' },
    { label: 'Blog', href: '/blog' }
  ]
};
---

<footer id="contacto" class="footer">
  <div class="container">
    <div class="footer-main">
      <div class="footer-brand">
        <div class="brand-logo">
          <span class="logo-team">TEAM</span>
          <span class="logo-service">SERVICE</span>
          <span class="logo-costa">COSTA</span>
        </div>
        <p class="brand-tagline">
          Centro de Servicio Técnico Autorizado KÄRCHER en la región Caribe.
        </p>
        <div class="social-links">
          <a href="https://www.facebook.com/tscostasas" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Facebook">
