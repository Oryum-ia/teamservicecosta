---
// Modal para Agendar Cita
---

<div id="agendar-cita-modal" class="modal-overlay" style="display: none;">
  <div class="modal-container">
    <div class="modal-header">
      <h2 class="modal-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
        Agenda tu Cita
      </h2>
      <button class="modal-close" data-modal="agendar-cita-modal" aria-label="Cerrar">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <form id="agendar-cita-form" class="modal-form">
      <div class="form-group">
        <label for="cita-nombre" class="form-label">Nombre completo <span class="required">*</span></label>
        <input type="text" id="cita-nombre" name="nombre" class="form-input" required placeholder="Tu nombre completo">
      </div>

      <div class="form-group">
        <label for="cita-telefono" class="form-label">Teléfono <span class="required">*</span></label>
        <input type="tel" id="cita-telefono" name="telefono" class="form-input" required placeholder="+57 300 123 4567">
      </div>

      <div class="form-group">
        <label for="cita-sede" class="form-label">Sede <span class="required">*</span></label>
        <select id="cita-sede" name="sede" class="form-input" required>
          <option value="">Selecciona una sede</option>
          <option value="monteria" data-phone="+573205085531">Montería</option>
          <option value="cartagena" data-phone="+573023262268">Cartagena</option>
          <option value="apartado" data-phone="+573023262239">Apartadó</option>
        </select>
      </div>

      <div class="form-group">
        <label for="cita-fecha" class="form-label">Fecha preferida <span class="required">*</span></label>
        <input type="date" id="cita-fecha" name="fecha" class="form-input" required>
      </div>

      <div class="form-group">
        <label for="cita-hora" class="form-label">Hora preferida <span class="required">*</span></label>
        <select id="cita-hora" name="hora" class="form-input" required>
          <option value="">Selecciona una hora</option>
          <option value="08:00">8:00 AM</option>
          <option value="09:00">9:00 AM</option>
          <option value="10:00">10:00 AM</option>
          <option value="11:00">11:00 AM</option>
          <option value="14:00">2:00 PM</option>
          <option value="15:00">3:00 PM</option>
          <option value="16:00">4:00 PM</option>
          <option value="17:00">5:00 PM</option>
        </select>
      </div>

      <div class="form-group">
        <label for="cita-equipo" class="form-label">Tipo de equipo</label>
        <input type="text" id="cita-equipo" name="equipo" class="form-input" placeholder="Ej: Hidrolavadora K5">
      </div>

      <div class="form-group">
        <label for="cita-comentarios" class="form-label">Comentarios adicionales</label>
        <textarea id="cita-comentarios" name="comentarios" class="form-textarea" rows="3" placeholder="Describe el motivo de tu cita..."></textarea>
      </div>

      <div class="form-actions">
        <button type="button" class="btn-secondary" data-modal="agendar-cita-modal">Cancelar</button>
        <button type="submit" class="btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
          </svg>
          Enviar por WhatsApp
        </button>
      </div>
    </form>
  </div>
</div>

<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-4);
    animation: fadeIn 0.2s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .modal-container {
    background: white;
    border-radius: var(--radius-2xl);
    max-width: 600px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    animation: slideUp 0.3s ease;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-6);
    border-bottom: 2px solid var(--color-gray-100);
    position: sticky;
    top: 0;
    background: white;
    z-index: 1;
  }

  .modal-title {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: #1a1a2e;
    margin: 0;
  }

  .modal-title svg {
    color: #FFD700;
  }

  .modal-close {
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--spacing-2);
    border-radius: var(--radius-md);
    transition: all 0.2s ease;
    color: var(--color-gray-500);
  }

  .modal-close:hover {
    background: var(--color-gray-100);
    color: var(--color-gray-700);
  }

  .modal-form {
    padding: var(--spacing-6);
  }

  .form-group {
    margin-bottom: var(--spacing-4);
  }

  .form-label {
    display: block;
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: #1a1a2e;
    margin-bottom: var(--spacing-2);
  }

  .required {
    color: #ef4444;
  }

  .form-input,
  .form-textarea {
    width: 100%;
    padding: var(--spacing-3) var(--spacing-4);
    border: 2px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    font-size: var(--text-base);
    font-family: var(--font-primary);
    transition: all 0.2s ease;
    background: white;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: #FFD700;
    box-shadow: 0 0 0 4px rgba(255, 215, 0, 0.15);
  }

  .form-textarea {
    resize: vertical;
    min-height: 80px;
  }

  .form-actions {
    display: flex;
    gap: var(--spacing-3);
    justify-content: flex-end;
    margin-top: var(--spacing-6);
    padding-top: var(--spacing-6);
    border-top: 2px solid var(--color-gray-100);
  }

  .btn-primary,
  .btn-secondary {
    padding: var(--spacing-3) var(--spacing-6);
    border-radius: var(--radius-lg);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
  }

  .btn-primary {
    background: linear-gradient(135deg, #FFD700 0%, #FFC700 100%);
    color: #1a1a2e;
    box-shadow: 0 4px 12px rgba(255, 215, 0, 0.3);
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #FFC700 0%, #FFB700 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(255, 215, 0, 0.4);
  }

  .btn-secondary {
    background: white;
    color: var(--color-gray-700);
    border: 2px solid var(--color-gray-300);
  }

  .btn-secondary:hover {
    background: var(--color-gray-50);
    border-color: var(--color-gray-400);
  }

  @media (max-width: 640px) {
    .modal-container {
      max-height: 100vh;
      border-radius: 0;
    }

    .form-actions {
      flex-direction: column-reverse;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<script is:inline>
  (function() {
    function initAgendarCitaModal() {
      const agendarCitaForm = document.getElementById('agendar-cita-form');
      const agendarCitaModal = document.getElementById('agendar-cita-modal');

      if (!agendarCitaForm || !agendarCitaModal) {
        console.error('Modal o formulario de cita no encontrado');
        return;
      }

      console.log('Modal de agendar cita inicializado');

      // Establecer fecha mínima (hoy)
      const fechaInput = document.getElementById('cita-fecha');
      if (fechaInput) {
        const today = new Date().toISOString().split('T')[0];
        fechaInput.min = today;
      }

      agendarCitaForm.addEventListener('submit', function(e) {
        e.preventDefault();

        const formData = new FormData(agendarCitaForm);
        const nombre = formData.get('nombre');
        const telefono = formData.get('telefono');
        const sedeSelect = document.getElementById('cita-sede');
        const sede = sedeSelect.options[sedeSelect.selectedIndex].text;
        const phoneNumber = sedeSelect.options[sedeSelect.selectedIndex].dataset.phone;
        const fecha = formData.get('fecha');
        const hora = formData.get('hora');
        const equipo = formData.get('equipo') || 'No especificado';
        const comentarios = formData.get('comentarios') || 'Ninguno';

        // Formatear fecha
        const fechaObj = new Date(fecha);
        const fechaFormateada = fechaObj.toLocaleDateString('es-CO', {
          weekday: 'long',
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        });

        const mensaje = 'Hola, quiero agendar una cita para servicio técnico:\n\n' +
          '*Datos de contacto:*\n' +
          '- Nombre: ' + nombre + '\n' +
          '- Teléfono: ' + telefono + '\n\n' +
          '*Detalles de la cita:*\n' +
          '- Sede: ' + sede + '\n' +
          '- Fecha preferida: ' + fechaFormateada + '\n' +
          '- Hora preferida: ' + hora + '\n' +
          '- Tipo de equipo: ' + equipo + '\n\n' +
          '*Comentarios adicionales:*\n' +
          comentarios + '\n\n' +
          '¡Gracias!';

        const mensajeCodificado = encodeURIComponent(mensaje);
        const whatsappUrl = 'https://wa.me/' + phoneNumber + '?text=' + mensajeCodificado;

        // Abrir WhatsApp
        window.open(whatsappUrl, '_blank');

        // Cerrar modal y resetear formulario
        agendarCitaModal.style.display = 'none';
        agendarCitaForm.reset();
      });

      // Cerrar modal al hacer clic en el overlay
      agendarCitaModal.addEventListener('click', function(e) {
        if (e.target === agendarCitaModal) {
          agendarCitaModal.style.display = 'none';
        }
      });

      // Cerrar modal con botón de cerrar
      const closeBtn = agendarCitaModal.querySelector('.modal-close');
      if (closeBtn) {
        closeBtn.addEventListener('click', function() {
          agendarCitaModal.style.display = 'none';
        });
      }
    }

    // Ejecutar cuando el DOM esté listo
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initAgendarCitaModal);
    } else {
      initAgendarCitaModal();
    }
  })();
</script>
