---
// Products Section - Miro Style
import ProductCardMiro from './ProductCardMiro.astro';
import { products, type Product } from '../data/products.ts';

// Get first 4 products for display
const featuredProducts = products.slice(0, 4) as Product[];
---

<section id="productos" class="products-section">
  <div class="container">
    <div class="section-header">
      <div class="header-top">
        <span class="section-eyebrow">Nuestra Tienda</span>
      </div>
      <h2 class="section-title">Equipos KÄRCHER para cada necesidad</h2>
      <p class="section-description">
        Productos originales con garantía oficial. Asesoría personalizada para elegir
        el equipo ideal según tus requerimientos.
      </p>
    </div>

    <div class="products-grid">
      {featuredProducts.map(product => (
        <ProductCardMiro
          name={product.name}
          model={product.model}
          price={product.price}
          image={product.image}
          available={product.available}
        />
      ))}
    </div>

    <div class="section-footer">
      <a href="/tienda" class="btn-view-all">
        Ver catálogo completo
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14"></path>
          <path d="m12 5 7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .products-section {
    background: var(--color-white);
    padding: var(--spacing-32) 0;
  }

  .section-header {
    max-width: 800px;
    margin: 0 auto var(--spacing-20);
    text-align: center;
  }

  .header-top {
    margin-top: var(--spacing-8);
    margin-bottom: var(--spacing-5);
  }

  .section-eyebrow {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    background: var(--color-accent-light);
    padding: var(--spacing-2) var(--spacing-4);
    border-radius: var(--radius-full);
  }

  .section-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-extrabold);
    color: var(--color-black);
    margin-bottom: var(--spacing-5);
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .section-description {
    font-size: var(--text-base);
    color: var(--color-gray-600);
    line-height: 1.6;
    margin: 0;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-16);
  }

  .section-footer {
    text-align: center;
  }

  .btn-view-all {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: 0.75rem 1.5rem;
    background: var(--color-black);
    color: var(--color-white);
    border-radius: var(--radius-lg);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    text-decoration: none;
    transition: all var(--transition-base);
    box-shadow: 0 3px 10px rgba(5, 0, 56, 0.15);
  }

  .btn-view-all:hover {
    background: var(--color-gray-900);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(5, 0, 56, 0.2);
    gap: var(--spacing-3);
  }

  /* Responsive */
  @media (max-width: 968px) {
    .products-section {
      padding: var(--spacing-24) 0;
    }

    .section-header {
      margin-bottom: var(--spacing-16);
    }

    .section-title {
      font-size: var(--text-2xl);
    }

    .section-description {
      font-size: var(--text-base);
    }

    .products-grid {
      grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
      gap: var(--spacing-6);
    }
  }

  @media (max-width: 640px) {
    .products-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: var(--text-xl);
    }

    .section-description {
      font-size: var(--text-sm);
    }
  }
</style>
