---
// ProductCard Component
interface Props {
  name: string;
  model: string;
  price: string;
  image?: string;
  available?: boolean;
}

const { name, model, price, image, available = true } = Astro.props;
---

<div class="product-card">
  <div class="product-image">
    {image ? (
      <img src={image} alt={name} />
    ) : (
      <div class="image-placeholder">
        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
        </svg>
      </div>
    )}
    {!available && <div class="badge-unavailable">Agotado</div>}
    {available && <div class="badge-available">Disponible</div>}
  </div>

  <div class="product-info">
    <h3 class="product-name">{name}</h3>
    <p class="product-model">{model}</p>

    <div class="product-footer">
      <div class="product-price">
        <span class="price-symbol">$</span>
        <span class="price-amount">{price}</span>
      </div>

      <div class="product-actions">
        <button class="btn-add-cart" aria-label="Agregar al carrito">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          <span class="btn-text">Agregar al carro</span>
        </button>
        <button class="btn-buy-now">Comprar Ahora</button>
      </div>
    </div>
  </div>
</div>

<style>
  .product-card {
    background: var(--color-white);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .product-card:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-4px);
  }

  .product-image {
    position: relative;
    background: var(--color-gray-50);
    padding: var(--spacing-8);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 280px;
    overflow: hidden;
  }

  .product-image img {
    width: 100%;
    height: auto;
    object-fit: contain;
    transition: transform var(--transition-base);
  }

  .product-card:hover .product-image img {
    transform: scale(1.05);
  }

  .image-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-gray-300);
    padding: var(--spacing-12);
  }

  .badge-available,
  .badge-unavailable {
    position: absolute;
    top: var(--spacing-4);
    right: var(--spacing-4);
    padding: var(--spacing-2) var(--spacing-3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
  }

  .badge-available {
    background: rgba(34, 197, 94, 0.1);
    color: #16a34a;
    border: 1px solid rgba(34, 197, 94, 0.3);
  }

  .badge-unavailable {
    background: rgba(239, 68, 68, 0.1);
    color: #dc2626;
    border: 1px solid rgba(239, 68, 68, 0.3);
  }

  .product-info {
    padding: var(--spacing-6);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
    flex: 1;
  }

  .product-name {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-secondary);
    margin: 0;
    line-height: 1.3;
  }

  .product-model {
    font-size: var(--text-sm);
    color: var(--color-gray-500);
    margin: 0;
    font-weight: var(--font-medium);
  }

  .product-footer {
    margin-top: auto;
    padding-top: var(--spacing-4);
    border-top: 1px solid var(--color-gray-200);
  }

  .product-price {
    margin-bottom: var(--spacing-4);
  }

  .price-symbol {
    font-size: var(--text-lg);
    color: var(--color-gray-600);
    font-weight: var(--font-semibold);
  }

  .price-amount {
    font-size: var(--text-2xl);
    color: var(--color-secondary);
    font-weight: var(--font-extrabold);
    margin-left: var(--spacing-1);
  }

  .product-actions {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
  }

  .btn-add-cart,
  .btn-buy-now {
    width: 100%;
    padding: var(--spacing-3) var(--spacing-4);
    border: none;
    border-radius: var(--radius-lg);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    cursor: pointer;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
  }

  .btn-add-cart {
    background: var(--color-white);
    color: var(--color-secondary);
    border: 2px solid var(--color-secondary);
  }

  .btn-add-cart:hover {
    background: var(--color-secondary);
    color: var(--color-white);
  }

  .btn-buy-now {
    background: var(--color-primary);
    color: var(--color-secondary);
  }

  .btn-buy-now:hover {
    background: var(--color-primary-dark);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(255, 215, 0, 0.3);
  }

  .btn-text {
    display: inline;
  }

  /* Responsive Design */
  @media (max-width: 640px) {
    .product-image {
      min-height: 220px;
      padding: var(--spacing-6);
    }

    .btn-text {
      display: none;
    }

    .btn-add-cart {
      padding: var(--spacing-3);
    }
  }
</style>
