---
// Footer Component with Locations and Contact
const locations = [
  {
    city: 'Montería',
    address: 'Calle 40 # 2-55, Barrio Nariño',
    phone: '+57 300 123 4567'
  },
  {
    city: 'Cartagena',
    address: 'Calle 30 # 21-137 local 4, Pie de La Popa',
    phone: '+57 300 234 5678'
  },
  {
    city: 'Apartadó',
    address: 'Calle 91 # 98-23, Barrio Manzanares',
    phone: '+57 300 345 6789'
  }
];
---

<footer id="contacto" class="footer">
  <div class="footer-wave">
    <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="currentColor"></path>
      <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" fill="currentColor"></path>
      <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" fill="currentColor"></path>
    </svg>
  </div>

  <div class="container">
    <div class="footer-main">
      <div class="footer-brand">
        <div class="brand-logo">
          <span class="logo-team">TEAM</span>
          <span class="logo-service">SERVICE</span>
          <span class="logo-costa">COSTA</span>
        </div>
        <p class="brand-tagline">Servicio Técnico Especializado</p>
        <p class="brand-description">
          Centro de Servicio Técnico Autorizado KÄRCHER en la región Caribe.
          Calidad, experiencia y garantía oficial.
        </p>
        <div class="social-links">
          <a href="#" class="social-link" aria-label="Facebook">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" class="social-link" aria-label="Instagram">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a href="#" class="social-link" aria-label="WhatsApp">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </a>
        </div>
      </div>

      <div class="footer-locations">
        <h3 class="footer-title">Nuestras Ubicaciones</h3>
        <div class="locations-grid">
          {locations.map(location => (
            <div class="location-card">
              <div class="location-header">
                <svg class="location-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <h4 class="location-city">{location.city}</h4>
              </div>
              <p class="location-address">{location.address}</p>
              <a href={`tel:${location.phone}`} class="location-phone">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
                {location.phone}
              </a>
            </div>
          ))}
        </div>
      </div>

      <div class="footer-links">
        <div class="links-column">
          <h3 class="footer-title">Enlaces Rápidos</h3>
          <ul class="links-list">
            <li><a href="/">Inicio</a></li>
            <li><a href="#nosotros">Nosotros</a></li>
            <li><a href="#servicios">Servicios</a></li>
            <li><a href="/tienda">Tienda</a></li>
            <li><a href="#contacto">Contacto</a></li>
          </ul>
        </div>
        <div class="links-column">
          <h3 class="footer-title">Servicios</h3>
          <ul class="links-list">
            <li><a href="#servicios">Reparación</a></li>
            <li><a href="/tienda">Venta de Equipos</a></li>
            <li><a href="#servicios">Repuestos</a></li>
            <li><a href="#servicios">Asesoría</a></li>
            <li><a href="/mis-reparaciones">Seguimiento</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <p class="copyright">
          © {new Date().getFullYear()} Team Service Costa S.A.S. Todos los derechos reservados.
        </p>
        <div class="footer-legal">
          <a href="/terminos">Términos y Condiciones</a>
          <span class="separator">•</span>
          <a href="/privacidad">Política de Privacidad</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(180deg, var(--color-secondary) 0%, #0a0a0a 100%);
    color: var(--color-white);
    position: relative;
    padding-top: 0;
  }

  .footer-wave {
    width: 100%;
    overflow: hidden;
    line-height: 0;
    color: var(--color-white);
    transform: rotate(180deg);
  }

  .footer-wave svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 80px;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1.5fr 2fr 1fr;
    gap: var(--spacing-12);
    padding: var(--spacing-16) 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
  }

  .brand-logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
    font-size: var(--text-xl);
    font-weight: var(--font-extrabold);
    margin-bottom: var(--spacing-2);
  }

  .logo-team {
    color: var(--color-white);
  }

  .logo-service {
    color: var(--color-primary);
  }

  .logo-costa {
    color: var(--color-white);
  }

  .brand-tagline {
    font-size: var(--text-xs);
    color: var(--color-gray-400);
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: var(--font-medium);
    margin: 0;
  }

  .brand-description {
    color: var(--color-gray-300);
    font-size: var(--text-sm);
    line-height: 1.7;
  }

  .social-links {
    display: flex;
    gap: var(--spacing-3);
  }

  .social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    color: var(--color-gray-300);
    transition: all var(--transition-fast);
  }

  .social-link:hover {
    background: var(--color-primary);
    color: var(--color-secondary);
    transform: translateY(-2px);
  }

  .footer-locations {
    grid-column: span 2;
  }

  .footer-title {
    color: var(--color-white);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    margin-bottom: var(--spacing-6);
  }

  .locations-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-6);
  }

  .location-card {
    background: rgba(255, 255, 255, 0.05);
    padding: var(--spacing-5);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all var(--transition-fast);
  }

  .location-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--color-primary);
  }

  .location-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    margin-bottom: var(--spacing-3);
  }

  .location-icon {
    color: var(--color-primary);
  }

  .location-city {
    color: var(--color-white);
    font-size: var(--text-base);
    font-weight: var(--font-bold);
    margin: 0;
  }

  .location-address {
    color: var(--color-gray-300);
    font-size: var(--text-sm);
    margin-bottom: var(--spacing-3);
    line-height: 1.6;
  }

  .location-phone {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    color: var(--color-primary);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .location-phone:hover {
    color: var(--color-primary-dark);
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-8);
  }

  .links-column {
    display: flex;
    flex-direction: column;
  }

  .links-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
  }

  .links-list a {
    color: var(--color-gray-300);
    font-size: var(--text-sm);
    text-decoration: none;
    transition: all var(--transition-fast);
    display: inline-block;
  }

  .links-list a:hover {
    color: var(--color-primary);
    transform: translateX(4px);
  }

  .footer-bottom {
    padding: var(--spacing-8) 0;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-4);
  }

  .copyright {
    color: var(--color-gray-400);
    font-size: var(--text-sm);
    margin: 0;
  }

  .footer-legal {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    font-size: var(--text-sm);
  }

  .footer-legal a {
    color: var(--color-gray-400);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-legal a:hover {
    color: var(--color-primary);
  }

  .separator {
    color: var(--color-gray-600);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr 1fr;
    }

    .footer-locations {
      grid-column: span 1;
    }

    .locations-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr;
    }

    .footer-locations {
      grid-column: span 1;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }

    .footer-wave svg {
      height: 50px;
    }
  }
</style>
