        type: ordenData.tipo_orden === 'reparacion' ? 'reparacion' : 'compra',
        currentStage: calculateStage(ordenData),
        images: ordenData.fotos_diagnostico ? ordenData.fotos_diagnostico.map((foto, index) => ({
