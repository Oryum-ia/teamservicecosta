<script>
  // Use the global cartManager from window (loaded via cart.js in Layout)
  declare global {
    interface Window {
      cartManager: any;
    }
  }

  class CheckoutPage {
    private orderItems: HTMLElement | null = null;
    private emptyCart: HTMLElement | null = null;
    private subtotalEl: HTMLElement | null = null;
    private shippingEl: HTMLElement | null = null;
    private totalEl: HTMLElement | null = null;
    private submitBtn: HTMLElement | null = null;
    private submitText: HTMLElement | null = null;
    private form: HTMLFormElement | null = null;
    private selectedPaymentMethod: string = 'pse';

    constructor() {
      this.init();
    }

    private init(): void {
      // Get DOM elements
      this.orderItems = document.getElementById('order-items');
      this.emptyCart = document.getElementById('empty-cart');
      this.subtotalEl = document.getElementById('checkout-subtotal');
      this.shippingEl = document.getElementById('checkout-shipping');
      this.totalEl = document.getElementById('checkout-total');
      this.submitBtn = document.getElementById('submit-order');
      this.submitText = document.getElementById('submit-text');
      this.form = document.getElementById('checkout-form') as HTMLFormElement;

      // Setup event listeners
      this.setupEventListeners();

      // Subscribe to cart changes
      window.cartManager.subscribe((state: any) => {
        this.renderOrder(state);
      });
    }

    private setupEventListeners(): void {
      // Edit cart button
      const editCartBtn = document.getElementById('edit-cart-btn');
      editCartBtn?.addEventListener('click', () => {
        window.cartManager.openCart();
      });

      // Submit order button
      this.submitBtn?.addEventListener('click', () => {
        this.handleSubmit();
      });

      // Payment method selection
      const paymentRadios = document.querySelectorAll<HTMLInputElement>('input[name="payment-method"]');
      paymentRadios.forEach(radio => {
        radio.addEventListener('change', () => {
          this.selectedPaymentMethod = radio.value;
          this.updateSubmitButton();
        });
      });

      // Form validation
      this.form?.addEventListener('input', () => {
        this.validateForm();
      });
    }

    private updateSubmitButton(): void {
      if (!this.submitText) return;

      const texts: { [key: string]: string } = {
        'pse': 'Proceder con PSE',
        'credit-card': 'Pagar con Tarjeta de Cr√©dito',
        'debit-card': 'Pagar con Tarjeta D√©bito',
        'whatsapp': 'Enviar Pedido por WhatsApp'
      };

      this.submitText.textContent = texts[this.selectedPaymentMethod] || 'Proceder al Pago';
    }

    private renderOrder(state: any): void {
      if (!this.orderItems || !this.emptyCart) return;

      if (state.items.length === 0) {
        this.orderItems.style.display = 'none';
        this.emptyCart?.classList.add('show');
        if (this.submitBtn) (this.submitBtn as HTMLButtonElement).disabled = true;
      } else {
        this.orderItems.style.display = 'flex';
        this.emptyCart?.classList.remove('show');
        if (this.submitBtn) (this.submitBtn as HTMLButtonElement).disabled = false;

        // Render items
        this.orderItems.innerHTML = state.items.map((item: any) => `
          <div class="order-item">
            <div class="item-image">
              ${item.image
                ? `<img src="${item.image}" alt="${item.name}" />`
                : '<div class="placeholder">üì¶</div>'
              }
            </div>
            <div class="item-details">
              <div class="item-name">${item.name}</div>
              <div class="item-model">${item.model}</div>
              <div class="item-quantity">Cantidad: ${item.quantity}</div>
            </div>
            <div class="item-price">${window.cartManager.formatPrice(item.price * item.quantity)}</div>
          </div>
        `).join('');
      }

      // Update totals
      const subtotal = state.total;
      const shipping = subtotal >= 500000 ? 0 : 25000; // Free shipping over $500k COP
      const total = subtotal + shipping;

      if (this.subtotalEl) this.subtotalEl.textContent = window.cartManager.formatPrice(subtotal);
      if (this.shippingEl) this.shippingEl.textContent = shipping === 0 ? 'Gratis' : window.cartManager.formatPrice(shipping);
      if (this.totalEl) this.totalEl.textContent = window.cartManager.formatPrice(total);
    }

    private validateForm(): boolean {
      if (!this.form) return false;

      const formData = new FormData(this.form);
      const required = ['name', 'email', 'phone', 'address', 'city', 'department'];
      
      for (const field of required) {
        const value = formData.get(field) as string;
        if (!value || !value.trim()) {
          return false;
        }
      }
      
      return true;
    }

