---
import Layout from '../layouts/Layout.astro';
import HeaderMiro from '../components/HeaderMiro.astro';
import FooterMiro from '../components/FooterMiro.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import ShippingCalculator from '../components/ShippingCalculator.astro';
---

<Layout
  title="Finalizar Compra | Team Service Costa S.A.S."
  description="Completa tu compra de equipos KÄRCHER con envío seguro a toda Colombia. Garantía oficial y soporte técnico especializado."
>
  <HeaderMiro />
  
  <main class="checkout-main">
    <!-- Progress Steps -->
    <section class="progress-section">
      <div class="container">
        <div class="progress-steps">
          <div class="step completed">
            <div class="step-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9 11l3 3L22 4"></path>
                <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"></path>
              </svg>
            </div>
            <span class="step-text">Carrito</span>
          </div>
          <div class="step active">
            <div class="step-icon">2</div>
            <span class="step-text">Información</span>
          </div>
          <div class="step">
            <div class="step-icon">3</div>
            <span class="step-text">Pago</span>
          </div>
          <div class="step">
            <div class="step-icon">4</div>
            <span class="step-text">Confirmación</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Hero Section -->
    <section class="checkout-hero">
      <div class="container">
        <div class="hero-content">
          <div class="hero-badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
            Compra 100% Segura
          </div>
          <h1 class="hero-title">Finaliza tu Compra</h1>
          <p class="hero-subtitle">Completa tu pedido de forma rápida y segura con envío a toda Colombia</p>

          <div class="trust-badges">
            <div class="trust-badge">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                <line x1="1" y1="10" x2="23" y2="10"></line>
              </svg>
              <span>Pago Seguro</span>
            </div>
            <div class="trust-badge">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M1 3h15v13H1z"></path>
                <path d="M16 8h5l3 3v5h-8V8z"></path>
                <circle cx="5.5" cy="18.5" r="2.5"></circle>
                <circle cx="18.5" cy="18.5" r="2.5"></circle>
              </svg>
              <span>Envío Nacional</span>
            </div>
            <div class="trust-badge">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
              <span>Soporte 24/7</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Checkout Content -->
    <section class="checkout-section">
      <div class="container">
        <div class="checkout-grid">
          <!-- Customer Information Form -->
          <div class="customer-form">
            <form id="checkout-form" class="checkout-form">
              <div class="form-section">
                <h3 class="form-title">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                  </svg>
                  Información de Contacto
                </h3>
                
                <div class="form-row">
                  <div class="form-group">
                    <label for="customer-name" class="form-label">Nombre Completo *</label>
                    <input type="text" id="customer-name" name="name" class="form-input" required placeholder="Juan Pérez">
                  </div>
                  
                  <div class="form-group">
                    <label for="customer-phone" class="form-label">Teléfono *</label>
                    <input type="tel" id="customer-phone" name="phone" class="form-input" required placeholder="300 123 4567">
                  </div>
                </div>
                
                <div class="form-group">
                  <label for="customer-email" class="form-label">Correo Electrónico *</label>
                  <input type="email" id="customer-email" name="email" class="form-input" required placeholder="correo@ejemplo.com">
                </div>
              </div>

              <div class="form-section">
                <h3 class="form-title">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                    <circle cx="12" cy="10" r="3"></circle>
                  </svg>
                  Dirección de Envío
                </h3>
                
                <div class="form-group">
                  <label for="shipping-address" class="form-label">Dirección Completa *</label>
                  <textarea id="shipping-address" name="address" class="form-textarea" rows="3" required placeholder="Ej: Calle 40 # 2-55, Barrio Nariño"></textarea>
                </div>
                
                <div class="form-row">
                  <div class="form-group">
                    <label for="shipping-city" class="form-label">Ciudad *</label>
                    <select id="shipping-city" name="city" class="form-select" required>
                      <option value="">Seleccionar ciudad</option>
                      <option value="monteria">Montería</option>
                      <option value="cartagena">Cartagena</option>
                      <option value="apartado">Apartadó</option>
                      <option value="other">Otra ciudad</option>
                    </select>
                  </div>
                  
                  <div class="form-group">
                    <label for="shipping-department" class="form-label">Departamento *</label>
                    <select id="shipping-department" name="department" class="form-select" required>
                      <option value="">Seleccionar departamento</option>
                      <option value="cordoba">Córdoba</option>
                      <option value="bolivar">Bolívar</option>
                      <option value="antioquia">Antioquia</option>
                      <option value="other">Otro</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="form-section">
                <h3 class="form-title">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                  </svg>
                  Método de Pago
                </h3>

                <div class="payment-methods">
                  <label class="payment-option">
                    <input type="radio" name="payment-method" value="pse" checked />
                    <div class="payment-card">
                      <div class="payment-icon pse">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <rect x="2" y="5" width="20" height="14" rx="2"></rect>
                          <line x1="2" y1="10" x2="22" y2="10"></line>
                        </svg>
                      </div>
                      <div class="payment-info">
                        <span class="payment-name">PSE</span>
                        <span class="payment-desc">Pago Seguro en Línea</span>
                      </div>
                      <div class="payment-check">✓</div>
                    </div>
                  </label>

                  <label class="payment-option">
                    <input type="radio" name="payment-method" value="credit-card" />
                    <div class="payment-card">
                      <div class="payment-icon credit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                          <line x1="1" y1="10" x2="23" y2="10"></line>
                        </svg>
                      </div>
                      <div class="payment-info">
                        <span class="payment-name">Tarjeta de Crédito</span>
                        <span class="payment-desc">Visa, Mastercard, AmEx</span>
                      </div>
                      <div class="payment-check">✓</div>
                    </div>
                  </label>

                  <label class="payment-option">
                    <input type="radio" name="payment-method" value="whatsapp" />
                    <div class="payment-card">
                      <div class="payment-icon whatsapp">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
                        </svg>
                      </div>
                      <div class="payment-info">
                        <span class="payment-name">WhatsApp</span>
                        <span class="payment-desc">Coordinar pago</span>
                      </div>
                      <div class="payment-check">✓</div>
                    </div>
                  </label>
                </div>
              </div>

              <div class="form-section">
                <h3 class="form-title">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10 9 9 9 8 9"></polyline>
                  </svg>
                  Comentarios Adicionales
                </h3>

                <div class="form-group">
                  <label for="order-notes" class="form-label">Notas del Pedido (Opcional)</label>
                  <textarea id="order-notes" name="notes" class="form-textarea" rows="3" placeholder="Instrucciones especiales de entrega, horarios preferenciales, etc."></textarea>
                </div>
              </div>

              <div class="form-actions">
                <button type="button" id="submit-order" class="btn-checkout">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                  </svg>
                  <span id="submit-text">Proceder al Pago</span>
                </button>

                <p class="payment-note">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                  </svg>
                  Pagos seguros y protegidos con encriptación SSL
                </p>
              </div>
            </form>
          </div>

          <!-- Order Summary -->
          <div class="order-summary">
            <div class="summary-header">
              <h2 class="summary-title">Resumen del Pedido</h2>
              <button id="edit-cart-btn" class="edit-cart-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                  <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
                Editar
              </button>
            </div>
            
            <div id="order-items" class="order-items">
              <!-- Items will be populated here -->
            </div>
            
            <div id="empty-cart" class="empty-cart">
              <div class="empty-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="9" cy="21" r="1"></circle>
                  <circle cx="20" cy="21" r="1"></circle>
                  <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                </svg>
              </div>
              <p class="empty-text">No tienes productos en tu carrito</p>
              <a href="/tienda" class="btn-primary">Ver Productos</a>
            </div>

            <!-- Código de Descuento -->
            <div class="discount-section">
              <div class="discount-header">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                  <line x1="7" y1="7" x2="7.01" y2="7"></line>
                </svg>
                <span>¿Tienes un código de descuento?</span>
              </div>
              <div class="discount-input-group">
                <input type="text" id="discount-code" placeholder="Ingresa tu código" class="discount-input" />
                <button id="apply-discount-btn" class="apply-discount-btn">Aplicar</button>
              </div>
              <div id="discount-message" class="discount-message"></div>
            </div>

            <!-- Calculadora de Envío -->
            <div class="shipping-calculator-wrapper">
              <ShippingCalculator />
            </div>

            <div class="order-totals">
              <div class="total-row">
                <span class="total-label">Subtotal</span>
                <span id="checkout-subtotal" class="total-value">$0</span>
              </div>
              <div class="total-row" id="discount-row" style="display: none;">
                <span class="total-label">Descuento</span>
                <span id="checkout-discount" class="total-value discount-value">-$0</span>
              </div>
              <div class="total-row">
                <span class="total-label">Envío</span>
                <span id="checkout-shipping" class="total-value">$0</span>
              </div>
              <div class="total-row total-final">
                <span class="total-label">Total</span>
                <span id="checkout-total" class="total-value">$0</span>
              </div>
            </div>

            <!-- Security Badges -->
            <div class="security-badges">
              <div class="security-badge">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
                <span>Compra Segura</span>
              </div>
              <div class="security-badge">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="11" width="18" height="10" rx="2" ry="2"></rect>
                  <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                </svg>
                <span>Datos Protegidos</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <FooterMiro />
  
  <WhatsAppButton
    phone="+573205085531"
    message="Hola, tengo una consulta sobre mi pedido de productos KÄRCHER"
  />
</Layout>

<style>
  /* Progress Steps */
  .progress-section {
    background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
    padding: var(--spacing-6) 0;
    border-bottom: 1px solid var(--color-gray-200);
  }

  .progress-steps {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-8);
    max-width: 600px;
    margin: 0 auto;
  }

  .step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-2);
    position: relative;
  }

  .step:not(:last-child)::after {
    content: '';
    position: absolute;
    top: 20px;
    left: calc(100% + 16px);
    width: 32px;
    height: 2px;
    background: var(--color-gray-300);
  }

  .step.completed:not(:last-child)::after {
    background: var(--color-primary);
  }

  .step-icon {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-full);
    background: var(--color-gray-200);
    color: var(--color-gray-500);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--font-bold);
    font-size: var(--text-sm);
    transition: all var(--transition-base);
  }

  .step.completed .step-icon {
    background: var(--color-primary);
    color: var(--color-black);
  }

  .step.active .step-icon {
    background: linear-gradient(135deg, #FFD700 0%, #FFC700 100%);
    color: var(--color-black);
    box-shadow: 0 4px 12px rgba(255, 215, 0, 0.3);
  }

  .step-text {
    font-size: var(--text-xs);
    color: var(--color-gray-600);
    font-weight: var(--font-medium);
  }

  .step.completed .step-text,
  .step.active .step-text {
    color: var(--color-black);
    font-weight: var(--font-semibold);
  }

  /* Main Styles */
  .checkout-main {
    min-height: 100vh;
    background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
  }

  /* Hero Section */
  .checkout-hero {
    background: linear-gradient(135deg, #1a1a2e 0%, #2d2d44 50%, #1a1a2e 100%);
    padding: var(--spacing-8) 0 var(--spacing-6);
    position: relative;
    overflow: hidden;
  }

  .checkout-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 20% 30%, rgba(255, 215, 0, 0.15) 0%, transparent 40%),
      radial-gradient(circle at 80% 70%, rgba(66, 98, 255, 0.1) 0%, transparent 40%);
  }

  .checkout-hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M54.627 0l.83.828-1.415 1.415L51.8 0h2.827zM5.373 0l-.83.828L5.96 2.243 8.2 0H5.374zM48.97 0l3.657 3.657-1.414 1.414L46.143 0h2.828zM11.03 0L7.372 3.657 8.787 5.07 13.857 0H11.03zm32.284 0L49.8 6.485 48.384 7.9l-7.9-7.9h2.83zM16.686 0L10.2 6.485 11.616 7.9l7.9-7.9h-2.83z' fill='%23ffd700' fill-opacity='0.05' fill-rule='evenodd'/%3E%3C/svg%3E");
    opacity: 0.3;
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    background: rgba(255, 215, 0, 0.15);
    border: 1px solid rgba(255, 215, 0, 0.3);
    color: #FFD700;
    padding: var(--spacing-2) var(--spacing-4);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    margin-bottom: var(--spacing-6);
    backdrop-filter: blur(10px);
  }

  .hero-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-extrabold);
    color: var(--color-white);
    margin-bottom: var(--spacing-4);
    letter-spacing: -0.02em;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    font-size: var(--text-lg);
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 var(--spacing-6) 0;
    line-height: 1.6;
  }

  .trust-badges {
    display: flex;
    justify-content: center;
    gap: var(--spacing-6);
    flex-wrap: wrap;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    color: rgba(255, 255, 255, 0.85);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    padding: var(--spacing-2) var(--spacing-3);
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(10px);
  }

  .trust-badge svg {
    color: #FFD700;
  }

  /* Checkout Section */
  .checkout-section {
    padding: var(--spacing-8) 0 var(--spacing-12);
  }

  .checkout-grid {
    display: grid;
    grid-template-columns: 1fr 480px;
    gap: var(--spacing-8);
    align-items: start;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Customer Form */
  .customer-form {
    background: var(--color-white);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-6);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    border: 1px solid var(--color-gray-200);
  }

  .form-section {
    margin-bottom: var(--spacing-6);
  }

  .form-section:last-child {
    margin-bottom: 0;
  }

  .form-title {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-black);
    margin: 0 0 var(--spacing-4) 0;
    padding-bottom: var(--spacing-3);
    border-bottom: 2px solid var(--color-gray-100);
