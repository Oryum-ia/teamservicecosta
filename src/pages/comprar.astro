---
import Layout from '../layouts/Layout.astro';
import HeaderMiro from '../components/HeaderMiro.astro';
import FooterMiro from '../components/FooterMiro.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
---

<Layout
  title="Finalizar Compra | Team Service Costa S.A.S."
  description="Completa tu compra de equipos K√ÑRCHER con env√≠o seguro a toda Colombia. Garant√≠a oficial y soporte t√©cnico especializado."
>
  <HeaderMiro />
  
  <main class="checkout-main">
    <!-- Hero Section -->
    <section class="checkout-hero">
      <div class="container">
        <div class="hero-content">
          <div class="hero-badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
            Compra Segura
          </div>
          <h1 class="hero-title">Finalizar Compra</h1>
          <p class="hero-subtitle">Completa tu pedido de forma r√°pida y segura con env√≠o a toda Colombia</p>

          <div class="trust-badges">
            <div class="trust-badge">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              </svg>
              <span>Pago Seguro</span>
            </div>
            <div class="trust-badge">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M1 3h15v13H1z"></path>
                <path d="M16 8h5l3 3v5h-8V8z"></path>
                <circle cx="5.5" cy="18.5" r="2.5"></circle>
                <circle cx="18.5" cy="18.5" r="2.5"></circle>
              </svg>
              <span>Env√≠o Nacional</span>
            </div>
            <div class="trust-badge">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
              <span>Soporte 24/7</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Checkout Content -->
    <section class="checkout-section">
      <div class="container">
        <div class="checkout-grid">
          <!-- Order Summary -->
          <div class="order-summary">
            <div class="summary-header">
              <h2 class="summary-title">Resumen del Pedido</h2>
              <button id="edit-cart-btn" class="edit-cart-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                  <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
                Editar
              </button>
            </div>
            
            <div id="order-items" class="order-items">
              <!-- Items will be populated here -->
            </div>
            
            <div id="empty-cart" class="empty-cart">
              <div class="empty-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="9" cy="21" r="1"></circle>
                  <circle cx="20" cy="21" r="1"></circle>
                  <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                </svg>
              </div>
              <p class="empty-text">No tienes productos en tu carrito</p>
              <a href="/tienda" class="btn-primary">Ver Productos</a>
            </div>

            <!-- C√≥digo de Descuento -->
            <div class="discount-section">
              <div class="discount-header">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                  <line x1="7" y1="7" x2="7.01" y2="7"></line>
                </svg>
                <span>¬øTienes un c√≥digo de descuento?</span>
              </div>
              <div class="discount-input-group">
                <input type="text" id="discount-code" placeholder="Ingresa tu c√≥digo" class="discount-input" />
                <button id="apply-discount-btn" class="apply-discount-btn">Aplicar</button>
              </div>
              <div id="discount-message" class="discount-message"></div>
            </div>

            <div class="order-totals">
              <div class="total-row">
                <span class="total-label">Subtotal</span>
                <span id="checkout-subtotal" class="total-value">$0</span>
              </div>
              <div class="total-row" id="discount-row" style="display: none;">
                <span class="total-label">Descuento</span>
                <span id="checkout-discount" class="total-value discount-value">-$0</span>
              </div>
              <div class="total-row">
                <span class="total-label">Env√≠o</span>
                <span id="checkout-shipping" class="total-value">$0</span>
              </div>
              <div class="total-row total-final">
                <span class="total-label">Total</span>
                <span id="checkout-total" class="total-value">$0</span>
              </div>
            </div>
          </div>

          <!-- Customer Information Form -->
          <div class="customer-form">
            <form id="checkout-form" class="checkout-form">
              <div class="form-section">
                <h3 class="form-title">Informaci√≥n de Contacto</h3>
                
                <div class="form-group">
                  <label for="customer-name" class="form-label">Nombre Completo *</label>
                  <input type="text" id="customer-name" name="name" class="form-input" required>
                </div>
                
                <div class="form-group">
                  <label for="customer-email" class="form-label">Correo Electr√≥nico *</label>
                  <input type="email" id="customer-email" name="email" class="form-input" required>
                </div>
                
                <div class="form-group">
                  <label for="customer-phone" class="form-label">Tel√©fono *</label>
                  <input type="tel" id="customer-phone" name="phone" class="form-input" required>
                </div>
              </div>

              <div class="form-section">
                <h3 class="form-title">Direcci√≥n de Env√≠o</h3>
                
                <div class="form-group">
                  <label for="shipping-address" class="form-label">Direcci√≥n Completa *</label>
                  <textarea id="shipping-address" name="address" class="form-textarea" rows="3" required placeholder="Ej: Calle 40 # 2-55, Barrio Nari√±o"></textarea>
                </div>
                
                <div class="form-row">
                  <div class="form-group">
                    <label for="shipping-city" class="form-label">Ciudad *</label>
                    <select id="shipping-city" name="city" class="form-select" required>
                      <option value="">Seleccionar ciudad</option>
                      <option value="monteria">Monter√≠a</option>
                      <option value="cartagena">Cartagena</option>
                      <option value="apartado">Apartad√≥</option>
                      <option value="other">Otra ciudad</option>
                    </select>
                  </div>
                  
                  <div class="form-group">
                    <label for="shipping-department" class="form-label">Departamento *</label>
                    <select id="shipping-department" name="department" class="form-select" required>
                      <option value="">Seleccionar departamento</option>
                      <option value="cordoba">C√≥rdoba</option>
                      <option value="bolivar">Bol√≠var</option>
                      <option value="antioquia">Antioquia</option>
                      <option value="other">Otro</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="form-section">
                <h3 class="form-title">Comentarios Adicionales</h3>

                <div class="form-group">
                  <label for="order-notes" class="form-label">Notas del Pedido (Opcional)</label>
                  <textarea id="order-notes" name="notes" class="form-textarea" rows="3" placeholder="Instrucciones especiales de entrega, horarios preferenciales, etc."></textarea>
                </div>
              </div>

              <div class="form-section">
                <h3 class="form-title">M√©todo de Pago</h3>

                <div class="payment-methods">
                  <label class="payment-option">
                    <input type="radio" name="payment-method" value="pse" checked />
                    <div class="payment-card">
                      <div class="payment-icon pse">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <rect x="2" y="5" width="20" height="14" rx="2"></rect>
                          <line x1="2" y1="10" x2="22" y2="10"></line>
                        </svg>
                      </div>
                      <div class="payment-info">
                        <span class="payment-name">PSE</span>
                        <span class="payment-desc">Pago Seguro en L√≠nea</span>
                      </div>
                      <div class="payment-check">‚úì</div>
                    </div>
                  </label>

                  <label class="payment-option">
                    <input type="radio" name="payment-method" value="credit-card" />
                    <div class="payment-card">
                      <div class="payment-icon credit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                          <line x1="1" y1="10" x2="23" y2="10"></line>
                        </svg>
                      </div>
                      <div class="payment-info">
                        <span class="payment-name">Tarjeta de Cr√©dito</span>
                        <span class="payment-desc">Visa, Mastercard, AmEx</span>
                      </div>
                      <div class="payment-check">‚úì</div>
                    </div>
                  </label>

                  <label class="payment-option">
                    <input type="radio" name="payment-method" value="debit-card" />
                    <div class="payment-card">
                      <div class="payment-icon debit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                          <line x1="1" y1="10" x2="23" y2="10"></line>
                        </svg>
                      </div>
                      <div class="payment-info">
                        <span class="payment-name">Tarjeta D√©bito</span>
                        <span class="payment-desc">D√©bito bancario</span>
                      </div>
                      <div class="payment-check">‚úì</div>
                    </div>
                  </label>

                  <label class="payment-option">
                    <input type="radio" name="payment-method" value="whatsapp" />
                    <div class="payment-card">
                      <div class="payment-icon whatsapp">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
                        </svg>
                      </div>
                      <div class="payment-info">
                        <span class="payment-name">WhatsApp</span>
                        <span class="payment-desc">Coordinar pago</span>
                      </div>
                      <div class="payment-check">‚úì</div>
                    </div>
                  </label>
                </div>
              </div>

              <div class="form-actions">
                <button type="button" id="submit-order" class="btn-checkout">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                  </svg>
                  <span id="submit-text">Proceder al Pago</span>
                </button>

                <p class="payment-note">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                  </svg>
                  Pagos seguros y protegidos
                </p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>

  <FooterMiro />
  
  <WhatsAppButton
    phone="+573205085531"
    message="Hola, tengo una consulta sobre mi pedido de productos K√ÑRCHER"
  />
</Layout>

<style>
  .checkout-main {
    min-height: 100vh;
    background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
  }

  /* Hero Section - Compacto */
  .checkout-hero {
    background: linear-gradient(135deg, #1a1a2e 0%, #2d2d44 50%, #1a1a2e 100%);
    padding: var(--spacing-8) 0 var(--spacing-6);
    position: relative;
    overflow: hidden;
    margin-top: 0;
  }

  .checkout-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 20% 30%, rgba(255, 215, 0, 0.15) 0%, transparent 40%),
      radial-gradient(circle at 80% 70%, rgba(66, 98, 255, 0.1) 0%, transparent 40%);
  }

  .checkout-hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M54.627 0l.83.828-1.415 1.415L51.8 0h2.827zM5.373 0l-.83.828L5.96 2.243 8.2 0H5.374zM48.97 0l3.657 3.657-1.414 1.414L46.143 0h2.828zM11.03 0L7.372 3.657 8.787 5.07 13.857 0H11.03zm32.284 0L49.8 6.485 48.384 7.9l-7.9-7.9h2.83zM16.686 0L10.2 6.485 11.616 7.9l7.9-7.9h-2.83z' fill='%23ffd700' fill-opacity='0.05' fill-rule='evenodd'/%3E%3C/svg%3E");
    opacity: 0.3;
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    background: rgba(255, 215, 0, 0.15);
    border: 1px solid rgba(255, 215, 0, 0.3);
    color: #FFD700;
    padding: var(--spacing-2) var(--spacing-4);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    margin-bottom: var(--spacing-4);
    backdrop-filter: blur(10px);
  }

  .hero-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-extrabold);
    color: var(--color-white);
    margin-bottom: var(--spacing-3);
    letter-spacing: -0.02em;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    font-size: var(--text-base);
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 var(--spacing-4) 0;
    line-height: 1.5;
  }

  .trust-badges {
    display: flex;
    justify-content: center;
    gap: var(--spacing-4);
    flex-wrap: wrap;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    color: rgba(255, 255, 255, 0.85);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
  }

  .trust-badge svg {
    color: #FFD700;
  }

  /* Checkout Section - Compacto */
  .checkout-section {
    padding: var(--spacing-8) 0 var(--spacing-12);
  }

  .checkout-grid {
    display: grid;
    grid-template-columns: 380px 1fr;
    gap: var(--spacing-6);
    align-items: start;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Order Summary - Compacto */
  .order-summary {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    padding: var(--spacing-5);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    border: 2px solid transparent;
    background-image: linear-gradient(white, white), linear-gradient(135deg, rgba(255, 215, 0, 0.3), rgba(66, 98, 255, 0.2));
    background-origin: padding-box, border-box;
    background-clip: padding-box, border-box;
    position: sticky;
    top: 80px;
  }

  .summary-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-4);
    padding-bottom: var(--spacing-3);
    border-bottom: 1px solid var(--color-gray-200);
  }

  .summary-title {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: #1a1a2e;
    margin: 0;
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
  }

  .summary-title::before {
    content: 'üõí';
    font-size: 20px;
  }

  .edit-cart-btn {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-2) var(--spacing-3);
    background: rgba(255, 215, 0, 0.1);
    color: #1a1a2e;
    border: 1px solid rgba(255, 215, 0, 0.3);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .edit-cart-btn:hover {
    background: rgba(255, 215, 0, 0.2);
    border-color: rgba(255, 215, 0, 0.5);
    transform: translateY(-1px);
  }

  /* Order Items - Compacto */
  .order-items {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
    margin-bottom: var(--spacing-4);
  }

  .order-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    padding: var(--spacing-3);
    background: var(--color-gray-50);
    border-radius: var(--radius-md);
  }

  .item-image {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #FAFAFA 0%, #F4F4F5 100%);
    border-radius: var(--radius-lg);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    border: 2px solid var(--color-gray-200);
    transition: all 0.3s;
  }

  .item-image:hover {
    border-color: #FFD02F;
    transform: scale(1.05);
  }

  .item-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 4px;
  }

  .item-image .placeholder {
    color: var(--color-gray-400);
    font-size: 20px;
  }

  .item-details {
    flex: 1;
  }

  .item-name {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-black);
    margin: 0 0 var(--spacing-1) 0;
    line-height: 1.3;
  }

  .item-model {
    font-size: var(--text-xs);
    color: var(--color-gray-500);
    margin: 0 0 var(--spacing-2) 0;
  }

  .item-quantity {
    font-size: var(--text-xs);
    color: var(--color-gray-600);
    margin: 0;
  }

  .item-price {
    font-size: var(--text-base);
    font-weight: var(--font-bold);
    color: var(--color-black);
    text-align: right;
  }

  /* Empty Cart */
  .empty-cart {
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-12);
    text-align: center;
  }

  .empty-cart.show {
    display: flex;
  }

  .empty-icon {
    color: var(--color-gray-300);
    margin-bottom: var(--spacing-4);
  }

  .empty-text {
    font-size: var(--text-base);
    color: var(--color-gray-600);
    margin: 0 0 var(--spacing-6) 0;
  }

  /* Discount Section */
  .discount-section {
    background: linear-gradient(135deg, rgba(255, 208, 47, 0.05) 0%, rgba(255, 208, 47, 0.1) 100%);
    border: 1px solid rgba(255, 208, 47, 0.3);
    border-radius: var(--radius-lg);
    padding: var(--spacing-4);
    margin-bottom: var(--spacing-4);
  }

  .discount-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    margin-bottom: var(--spacing-3);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: #1a1a2e;
  }

  .discount-header svg {
    color: #FFD02F;
  }

  .discount-input-group {
    display: flex;
    gap: var(--spacing-2);
  }

  .discount-input {
    flex: 1;
    padding: 10px 12px;
    border: 1px solid var(--color-gray-300);
    border-radius: var(--radius-md);
    font-size: 14px;
    font-family: inherit;
    transition: all 0.3s;
  }

  .discount-input:focus {
    outline: none;
    border-color: #FFD02F;
    box-shadow: 0 0 0 3px rgba(255, 208, 47, 0.1);
  }

  .apply-discount-btn {
    padding: 10px 20px;
    background: linear-gradient(135deg, #FFD02F 0%, #FFC700 100%);
    color: #1a1a2e;
    border: none;
    border-radius: var(--radius-md);
    font-size: 14px;
    font-weight: var(--font-bold);
    cursor: pointer;
    transition: all 0.3s;
    white-space: nowrap;
