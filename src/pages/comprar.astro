      message += `üì¶ *PRODUCTOS:*\n`;
      state.items.forEach((item: any) => {
        message += `‚Ä¢ ${item.name} (${item.model})\n`;
        message += `  Cantidad: ${item.quantity} | Precio: ${window.cartManager.formatPrice(item.price * item.quantity)}\n\n`;
      });

      message += `üìç *DIRECCI√ìN DE ENV√çO:*\n`;
      message += `${customerData.address}\n`;
      message += `${customerData.city}, ${customerData.department}\n\n`;

      if (customerData.notes) {
        message += `üìù *NOTAS ESPECIALES:*\n${customerData.notes}\n\n`;
      }

      const subtotal = state.total;
      const shipping = subtotal >= 500000 ? 0 : 25000;
      const total = subtotal + shipping;

      message += `üí∞ *RESUMEN:*\n`;
      message += `‚Ä¢ Subtotal: ${window.cartManager.formatPrice(subtotal)}\n`;
