<script>
  // Use the global cartManager from window (loaded via cart.js in Layout)
  declare global {
    interface Window {
      cartManager: any;
    }
  }

  class CheckoutPage {
    private orderItems: HTMLElement | null = null;
    private emptyCart: HTMLElement | null = null;
    private subtotalEl: HTMLElement | null = null;
    private shippingEl: HTMLElement | null = null;
    private totalEl: HTMLElement | null = null;
    private submitBtn: HTMLElement | null = null;
    private submitText: HTMLElement | null = null;
    private form: HTMLFormElement | null = null;
    private selectedPaymentMethod: string = 'pse';

    constructor() {
      this.init();
    }

    private init(): void {
      // Get DOM elements
      this.orderItems = document.getElementById('order-items');
      this.emptyCart = document.getElementById('empty-cart');
      this.subtotalEl = document.getElementById('checkout-subtotal');
      this.shippingEl = document.getElementById('checkout-shipping');
      this.totalEl = document.getElementById('checkout-total');
      this.submitBtn = document.getElementById('submit-order');
      this.submitText = document.getElementById('submit-text');
      this.form = document.getElementById('checkout-form') as HTMLFormElement;

      // Setup event listeners
      this.setupEventListeners();

      // Subscribe to cart changes
      window.cartManager.subscribe((state: any) => {
        this.renderOrder(state);
      });
    }

    private setupEventListeners(): void {
      // Edit cart button
      const editCartBtn = document.getElementById('edit-cart-btn');
      editCartBtn?.addEventListener('click', () => {
        window.cartManager.openCart();
      });

      // Submit order button
      this.submitBtn?.addEventListener('click', () => {
        this.handleSubmit();
      });

      // Payment method selection
      const paymentRadios = document.querySelectorAll<HTMLInputElement>('input[name="payment-method"]');
      paymentRadios.forEach(radio => {
        radio.addEventListener('change', () => {
          this.selectedPaymentMethod = radio.value;
          this.updateSubmitButton();
        });
      });

      // Form validation
      this.form?.addEventListener('input', () => {
        this.validateForm();
      });
    }

    private updateSubmitButton(): void {
      if (!this.submitText) return;

      const texts: { [key: string]: string } = {
        'pse': 'Proceder con PSE',
        'credit-card': 'Pagar con Tarjeta de Crédito',
        'whatsapp': 'Enviar Pedido por WhatsApp'
      };

      this.submitText.textContent = texts[this.selectedPaymentMethod] || 'Proceder al Pago';
    }

    private renderOrder(state: any): void {
      if (!this.orderItems || !this.emptyCart) return;

      if (state.items.length === 0) {
        this.orderItems.style.display = 'none';
        this.emptyCart?.classList.add('show');
        if (this.submitBtn) (this.submitBtn as HTMLButtonElement).disabled = true;
      } else {
        this.orderItems.style.display = 'flex';
        this.emptyCart?.classList.remove('show');
        if (this.submitBtn) (this.submitBtn as HTMLButtonElement).disabled = false;

        // Render items
        this.orderItems.innerHTML = state.items.map((item: any) => `
          <div class="order-item">
            <div class="item-image">
              ${item.image
                ? `<img src="${item.image}" alt="${item.name}" />`
                : '<div class="placeholder">📦</div>'
              }
            </div>
            <div class="item-details">
              <div class="item-name">${item.name}</div>
              <div class="item-model">${item.model}</div>
              <div class="item-quantity">Cantidad: ${item.quantity}</div>
            </div>
            <div class="item-price">${window.cartManager.formatPrice(item.price * item.quantity)}</div>
          </div>
        `).join('');
      }

      // Update totals
      const subtotal = state.total;
      const shipping = subtotal >= 500000 ? 0 : 25000; // Free shipping over $500k COP
      const total = subtotal + shipping;

      if (this.subtotalEl) this.subtotalEl.textContent = window.cartManager.formatPrice(subtotal);
      if (this.shippingEl) this.shippingEl.textContent = shipping === 0 ? 'Gratis' : window.cartManager.formatPrice(shipping);
      if (this.totalEl) this.totalEl.textContent = window.cartManager.formatPrice(total);
    }

    private validateForm(): boolean {
      if (!this.form) return false;

      const formData = new FormData(this.form);
      const required = ['name', 'email', 'phone', 'address', 'city', 'department'];
      
      for (const field of required) {
        const value = formData.get(field) as string;
        if (!value || !value.trim()) {
          return false;
        }
      }
      
      return true;
    }

    private handleSubmit(): void {
      if (this.selectedPaymentMethod === 'whatsapp') {
        this.sendWhatsAppOrder();
      } else {
        this.processPayment();
      }
    }

    private processPayment(): void {
      if (!this.validateForm()) {
        alert('Por favor completa todos los campos requeridos.');
        return;
      }

      const state = window.cartManager.getState();
      if (state.items.length === 0) {
        alert('Tu carrito está vacío.');
        return;
      }

      const subtotal = state.total;
      const shipping = subtotal >= 500000 ? 0 : 25000;
      const total = subtotal + shipping;

      // Get form data
      const formData = new FormData(this.form!);
      const customerData = {
        name: formData.get('name') as string,
        email: formData.get('email') as string,
        phone: formData.get('phone') as string,
        address: formData.get('address') as string,
        city: formData.get('city') as string,
        department: formData.get('department') as string,
        notes: formData.get('notes') as string || ''
      };

      // Simulate payment processing
      const paymentMessages: { [key: string]: string } = {
        'pse': '🏦 Redirigiendo a PSE para completar el pago...',
        'credit-card': '💳 Procesando pago con tarjeta de crédito...'
      };

      // Show processing state
      if (this.submitBtn && this.submitText) {
        this.submitBtn.classList.add('processing');
        this.submitText.style.display = 'none';
        const loader = document.getElementById('payment-loader');
        if (loader) loader.style.display = 'block';
      }

      alert(paymentMessages[this.selectedPaymentMethod]);

      // In a real implementation, you would integrate with a payment gateway here
      // For now, we'll simulate a successful payment
      setTimeout(() => {
        // Show success state
        if (this.submitBtn && this.submitText) {
          this.submitBtn.classList.remove('processing');
          this.submitBtn.classList.add('success');
          this.submitText.textContent = '✅ ¡Pago Completado!';
        }

        // Create success modal
        const successModal = document.createElement('div');
        successModal.className = 'payment-success-modal';
        successModal.innerHTML = `
          <div class="modal-overlay">
            <div class="modal-content">
              <div class="success-icon">✅</div>
              <h2>¡Pago Procesado Exitosamente!</h2>
              <p class="success-message">
                Tu pedido ha sido confirmado y será procesado inmediatamente.
              </p>
              <div class="order-details">
                <div class="detail-row">
                  <span class="detail-label">Total Pagado:</span>
                  <span class="detail-value">${window.cartManager.formatPrice(total)}</span>
                </div>
                <div class="detail-row">
                  <span class="detail-label">Correo de Confirmación:</span>
                  <span class="detail-value">${customerData.email}</span>
                </div>
                <div class="detail-row">
                  <span class="detail-label">Número de Pedido:</span>
                  <span class="detail-value">#ORD-${Date.now().toString().slice(-6)}</span>
                </div>
              </div>
              <button class="btn-continue" onclick="this.closeSuccessModal()">
                Continuar Comprando
              </button>
            </div>
          </div>
        `;

        document.body.appendChild(successModal);

        // Clear cart and redirect after delay
        setTimeout(() => {
          window.cartManager.clearCart();
          window.location.href = '/';
        }, 3000);
      }, 2000);
    }

    private sendWhatsAppOrder(): void {
      if (!this.validateForm()) {
        alert('Por favor completa todos los campos requeridos.');
        return;
      }

      const state = window.cartManager.getState();
      if (state.items.length === 0) {
        alert('Tu carrito está vacío.');
        return;
      }

      // Get form data
      const formData = new FormData(this.form!);
      const customerData = {
        name: formData.get('name') as string,
        email: formData.get('email') as string,
        phone: formData.get('phone') as string,
        address: formData.get('address') as string,
        city: formData.get('city') as string,
        department: formData.get('department') as string,
        notes: formData.get('notes') as string || ''
      };

      // Show processing state
      if (this.submitBtn && this.submitText) {
        this.submitBtn.classList.add('processing');
        this.submitText.style.display = 'none';
        const loader = document.getElementById('payment-loader');
        if (loader) loader.style.display = 'block';
      }

      // Build WhatsApp message
      let message = `🛒 *NUEVO PEDIDO - TEAM SERVICE COSTA*\n\n`;
      message += `👤 *CLIENTE:*\n`;
      message += `• Nombre: ${customerData.name}\n`;
      message += `• Email: ${customerData.email}\n`;
      message += `• Teléfono: ${customerData.phone}\n\n`;
      
      message += `📦 *PRODUCTOS:*\n`;
      state.items.forEach((item: any) => {
        message += `• ${item.name} (${item.model})\n`;
        message += `  Cantidad: ${item.quantity} | Precio: ${window.cartManager.formatPrice(item.price * item.quantity)}\n\n`;
      });
      
      message += `📍 *DIRECCIÓN DE ENVÍO:*\n`;
      message += `${customerData.address}\n`;
      message += `${customerData.city}, ${customerData.department}\n\n`;
      
      if (customerData.notes) {
        message += `📝 *NOTAS ESPECIALES:*\n${customerData.notes}\n\n`;
      }
      
      const subtotal = state.total;
      const shipping = subtotal >= 500000 ? 0 : 25000;
      const total = subtotal + shipping;
      
      message += `💰 *RESUMEN:*\n`;
      message += `• Subtotal: ${window.cartManager.formatPrice(subtotal)}\n`;
      message += `• Envío: ${shipping === 0 ? 'GRATIS' : window.cartManager.formatPrice(shipping)}\n`;
      message += `• *TOTAL: ${window.cartManager.formatPrice(total)}*\n\n`;
      message += `¡Gracias por confiar en Team Service Costa! 🙌`;
      
      // Send to WhatsApp
      const phone = '+573205085531';
      const whatsappUrl = `https://wa.me/${phone}?text=${encodeURIComponent(message)}`;
      
      window.open(whatsappUrl, '_blank');

      // Show success feedback
      setTimeout(() => {
        if (this.submitBtn && this.submitText) {
          this.submitBtn.classList.remove('processing');
          this.submitBtn.classList.add('success');
          this.submitText.textContent = '✅ ¡Pedido Enviado!';
        }
        
        // Create success notification
        const notification = document.createElement('div');
        notification.className = 'whatsapp-success-notification';
        notification.innerHTML = `
          <div class="notification-content">
            <div class="notification-icon">📱</div>
            <div class="notification-text">
              <strong>¡Pedido enviado por WhatsApp!</strong>
              <p>Nos comunicaremos contigo pronto para confirmar tu pedido.</p>
            </div>
          </div>
        `;
        
        document.body.appendChild(notification);
        
        // Remove notification after 5 seconds
        setTimeout(() => {
          if (notification.parentNode) {
            notification.parentNode.removeChild(notification);
          }
        }, 5000);

        // Clear cart after sending order
        setTimeout(() => {
          window.cartManager.clearCart();
        }, 1000);
      }, 500);
    }

    private closeSuccessModal(): void {
      const modal = document.querySelector('.payment-success-modal');
      if (modal && modal.parentNode) {
        modal.parentNode.removeChild(modal);
      }
    }
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      new CheckoutPage();
    });
  } else {
    new CheckoutPage();
  }
</script>