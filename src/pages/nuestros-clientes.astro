---
import Layout from '../layouts/Layout.astro';
import HeaderMiro from '../components/HeaderMiro.astro';
import FooterMiro from '../components/FooterMiro.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';

// Lista de clientes con sus proyectos
const clientes = [
  {
    nombre: "Caribe Verde S.A.",
    descripcion: "Mantenimiento preventivo y correctivo de equipos de limpieza industrial",
    imagenes: [
      "https://images.unsplash.com/photo-1532996122724-e3c354a0b15b?w=800&h=600&fit=crop",
      "https://images.unsplash.com/photo-1628177142898-93e36e4e3a50?w=800&h=600&fit=crop",
      "https://images.unsplash.com/photo-1604187351574-c75ca79f5807?w=800&h=600&fit=crop",
    ]
  },
  {
    nombre: "Éxito Montería",
    descripcion: "Suministro e instalación de equipos Kärcher para limpieza de áreas comerciales",
    imagenes: [
      "https://images.unsplash.com/photo-1534452203293-494d7ddbf7e0?w=800&h=600&fit=crop",
      "https://images.unsplash.com/photo-1601598851547-4302969d0614?w=800&h=600&fit=crop",
      "https://images.unsplash.com/photo-1580828343064-fde4fc206bc6?w=800&h=600&fit=crop",
    ]
  },
  {
    nombre: "Alcaldía de Montería",
    descripcion: "Equipamiento y capacitación para servicios de limpieza municipal",
    imagenes: [
      "https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=800&h=600&fit=crop",
      "https://images.unsplash.com/photo-1582407947304-fd86f028f716?w=800&h=600&fit=crop",
      "https://images.unsplash.com/photo-1541888946425-d81bb19240f5?w=800&h=600&fit=crop",
    ]
  },
  {
    nombre: "Universidad de Córdoba",
    descripcion: "Mantenimiento de equipos profesionales y asesoría técnica especializada",
    imagenes: [
      "https://images.unsplash.com/photo-1562774053-701939374585?w=800&h=600&fit=crop",
      "https://images.unsplash.com/photo-1541339907198-e08756dedf3f?w=800&h=600&fit=crop",
      "https://images.unsplash.com/photo-1523050854058-8df90110c9f1?w=800&h=600&fit=crop",
    ]
  },
];
---

<Layout
  title="Nuestros Clientes | Team Service Costa"
  description="Con orgullo compartimos algunos de los trabajos realizados para empresas y organizaciones que confían en Team Service Costa."
>
  <HeaderMiro />

  <main class="clientes-page">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-background"></div>
      <div class="container">
        <div class="hero-content">
          <span class="hero-badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M22 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
            PORTAFOLIO
          </span>
          <h1 class="hero-title">Nuestros Clientes</h1>
          <p class="hero-description">
            Con orgullo compartimos algunos de los trabajos realizados para empresas y
            organizaciones que confían en Team Service Costa.
          </p>
          <p class="hero-description">
            Nuestra experiencia abarca desde el sector público hasta grandes empresas privadas,
            brindando soluciones profesionales con equipos KÄRCHER y Makita de la más alta calidad.
          </p>
        </div>
      </div>
    </section>

    <!-- Clientes Section -->
    <section class="clientes-section">
      <div class="container">
        {clientes.map((cliente, index) => (
          <div class="cliente-block" id={`cliente-${index}`}>
            <div class="cliente-header">
              <h2 class="cliente-nombre">{cliente.nombre}</h2>
              <p class="cliente-descripcion">{cliente.descripcion}</p>
            </div>

            <div class="cliente-gallery">
              <div class="gallery-main">
                <img
                  src={cliente.imagenes[0]}
                  alt={`${cliente.nombre} - Imagen principal`}
                  class="gallery-main-image"
                  onerror="this.src='/placeholder-product.jpg'"
                />
              </div>
              <div class="gallery-thumbnails">
                {cliente.imagenes.map((imagen, imgIndex) => (
                  <div class="thumbnail">
                    <img
                      src={imagen}
                      alt={`${cliente.nombre} - Imagen ${imgIndex + 1}`}
                      class="thumbnail-image"
                      data-index={imgIndex}
                      onerror="this.src='/placeholder-product.jpg'"
                    />
                  </div>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2 class="cta-title">¿Quieres trabajar con nosotros?</h2>
          <p class="cta-description">
            Únete a las empresas que ya confían en nuestra experiencia y calidad de servicio.
            Contáctanos para conocer cómo podemos ayudarte.
          </p>
          <a href="/#contacto" class="btn-contacto">CONTÁCTANOS</a>
        </div>
      </div>
    </section>
  </main>

  <FooterMiro />
  <WhatsAppButton
    phone="+573205085531"
    message="Hola, quiero información sobre sus servicios para empresas"
  />
</Layout>

<style>
  .clientes-page {
    padding-top: 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-4);
  }

  /* Hero Section */
  .hero-section {
    position: relative;
    background: linear-gradient(135deg, #0F172A 0%, #1E293B 50%, #334155 100%);
    color: white;
    padding: var(--spacing-8) 0 var(--spacing-6);
    margin-top: 0;
    text-align: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      radial-gradient(circle at 20% 50%, rgba(255, 208, 47, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(66, 98, 255, 0.15) 0%, transparent 50%);
    z-index: 0;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--spacing-6);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-2) var(--spacing-4);
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    color: var(--color-white);
    margin-bottom: var(--spacing-6);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .hero-badge svg {
    color: var(--color-primary);
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: var(--font-extrabold);
    color: var(--color-white);
    margin-bottom: var(--spacing-4);
    line-height: 1.1;
    letter-spacing: -0.03em;
    background: linear-gradient(135deg, #FFFFFF 0%, #E2E8F0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: var(--text-base);
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.7;
    margin: 0 auto var(--spacing-3);
    max-width: 600px;
  }

  /* Clientes Section */
  .clientes-section {
    padding: 30px 0;
    background: var(--color-white);
  }

  .cliente-block {
    margin-bottom: var(--spacing-16);
    padding-bottom: var(--spacing-16);
    border-bottom: 2px solid var(--color-gray-200);
  }

  .cliente-block:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .cliente-header {
    text-align: center;
    margin-bottom: var(--spacing-12);
  }

  .cliente-nombre {
    font-size: var(--text-4xl);
    font-weight: var(--font-extrabold);
    color: #1a1a2e;
    margin-bottom: var(--spacing-3);
  }

  .cliente-descripcion {
    font-size: var(--text-lg);
    color: var(--color-gray-600);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Gallery */
  .cliente-gallery {
    max-width: 900px;
    margin: 0 auto;
  }

  .gallery-main {
    border-radius: var(--radius-xl);
    overflow: hidden;
    margin-bottom: var(--spacing-6);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

  .gallery-main-image {
    width: 100%;
    height: 500px;
    object-fit: cover;
    display: block;
  }

  .gallery-thumbnails {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-4);
  }

  .thumbnail {
    border-radius: var(--radius-lg);
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 3px solid transparent;
  }

  .thumbnail:hover {
    border-color: #FFD700;
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(255, 215, 0, 0.3);
  }

  .thumbnail-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
  }

  /* CTA Section */
  .cta-section {
    padding: 30px 0;
    background: linear-gradient(135deg, #FFD700 0%, #FFC700 100%);
  }

  .cta-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-extrabold);
    color: #1a1a2e;
    margin-bottom: var(--spacing-4);
  }

  .cta-description {
    font-size: var(--text-lg);
    color: #1a1a2e;
    line-height: 1.8;
    margin-bottom: var(--spacing-8);
  }

  .btn-contacto {
    display: inline-block;
    background: #1a1a2e;
    color: #FFD700;
    padding: var(--spacing-4) var(--spacing-10);
    border-radius: var(--radius-lg);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(26, 26, 46, 0.3);
  }

  .btn-contacto:hover {
    background: #2d2d44;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(26, 26, 46, 0.4);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: var(--text-3xl);
    }

    .hero-description {
      font-size: var(--text-base);
    }

    .cliente-nombre {
      font-size: var(--text-2xl);
    }

    .cliente-descripcion {
      font-size: var(--text-base);
    }

    .gallery-main-image {
      height: 300px;
    }

    .thumbnail-image {
      height: 150px;
    }

    .cta-title {
      font-size: var(--text-2xl);
    }
  }
</style>

<script>
  // Gallery interaction
  const clienteBlocks = document.querySelectorAll('.cliente-block');

  clienteBlocks.forEach(block => {
    const thumbnails = block.querySelectorAll<HTMLImageElement>('.thumbnail-image');
    const mainImage = block.querySelector<HTMLImageElement>('.gallery-main-image');

    if (mainImage && thumbnails.length > 0) {
      thumbnails.forEach(thumbnail => {
        thumbnail.addEventListener('click', () => {
          const newSrc = thumbnail.src;
          if (mainImage) {
            mainImage.src = newSrc;

            // Animation
            mainImage.style.opacity = '0';
            setTimeout(() => {
              if (mainImage) {
                mainImage.style.opacity = '1';
              }
            }, 100);
          }
        });
      });
    }
  });
</script>
