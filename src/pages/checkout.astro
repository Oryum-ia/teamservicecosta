---
import Layout from '../layouts/Layout.astro';
import HeaderMiro from '../components/HeaderMiro.astro';
import FooterMiro from '../components/FooterMiro.astro';
---

<Layout
  title="Checkout - Team Service Costa S.A.S."
  description="Finaliza tu compra de productos K√ÑRCHER"
>
  <HeaderMiro />

  <main class="checkout-page">
    <div class="container">
      <div class="checkout-wrapper">
        <!-- Left Column: Form -->
        <div class="checkout-form-column">
          <div class="breadcrumb">
            <a href="/" class="breadcrumb-link">Inicio</a>
            <span class="breadcrumb-separator">/</span>
            <a href="/#productos" class="breadcrumb-link">Productos</a>
            <span class="breadcrumb-separator">/</span>
            <span class="breadcrumb-current">Checkout</span>
          </div>

          <h1 class="page-title">Finalizar Compra</h1>

          <form id="checkout-form" class="checkout-form">
            <!-- Customer Type -->
            <div class="form-section">
              <h2 class="section-title">Tipo de Cliente</h2>
              <div class="radio-group">
                <label class="radio-label">
                  <input type="radio" name="customerType" value="person" checked />
                  <span class="radio-custom"></span>
                  <span>Persona Natural</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="customerType" value="company" />
                  <span class="radio-custom"></span>
                  <span>Empresa</span>
                </label>
              </div>
            </div>

            <!-- Billing Information -->
            <div class="form-section">
              <h2 class="section-title">Informaci√≥n de Facturaci√≥n</h2>

              <div class="form-grid">
                <div class="form-group full-width">
                  <label for="email">Correo Electr√≥nico <span class="required">*</span></label>
                  <input type="email" id="email" name="email" required placeholder="correo@ejemplo.com" />
                </div>

                <div class="form-group full-width">
                  <label for="phone">Tel√©fono <span class="required">*</span></label>
                  <input type="tel" id="phone" name="phone" required placeholder="+57 300 123 4567" />
                </div>

                <div class="form-group">
                  <label for="firstName">Nombre <span class="required">*</span></label>
                  <input type="text" id="firstName" name="firstName" required placeholder="Juan" />
                </div>

                <div class="form-group">
                  <label for="lastName">Apellido <span class="required">*</span></label>
                  <input type="text" id="lastName" name="lastName" required placeholder="P√©rez" />
                </div>

                <div class="form-group company-field" style="display: none;">
                  <label for="companyName">Nombre de Empresa <span class="required">*</span></label>
                  <input type="text" id="companyName" name="companyName" placeholder="Mi Empresa S.A.S." />
                </div>

                <div class="form-group company-field" style="display: none;">
                  <label for="companyNit">NIT</label>
                  <input type="text" id="companyNit" name="companyNit" placeholder="900.123.456-7" />
                </div>

                <div class="form-group full-width">
                  <label for="address">Direcci√≥n <span class="required">*</span></label>
                  <input type="text" id="address" name="address" required placeholder="Calle 123 #45-67" />
                </div>

                <div class="form-group">
                  <label for="city">Ciudad <span class="required">*</span></label>
                  <input type="text" id="city" name="city" required placeholder="Monter√≠a" />
                </div>

                <div class="form-group">
                  <label for="department">Departamento <span class="required">*</span></label>
                  <select id="department" name="department" required>
                    <option value="">Seleccione...</option>
                    <option value="C√≥rdoba">C√≥rdoba</option>
                    <option value="Sucre">Sucre</option>
                    <option value="Bol√≠var">Bol√≠var</option>
                    <option value="Antioquia">Antioquia</option>
                    <option value="Atl√°ntico">Atl√°ntico</option>
                    <option value="Magdalena">Magdalena</option>
                    <option value="La Guajira">La Guajira</option>
                    <option value="Cesar">Cesar</option>
                    <option value="Santander">Santander</option>
                    <option value="Norte de Santander">Norte de Santander</option>
                    <option value="Cundinamarca">Cundinamarca</option>
                    <option value="Valle del Cauca">Valle del Cauca</option>
                    <option value="Otro">Otro</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="postalCode">C√≥digo Postal</label>
                  <input type="text" id="postalCode" name="postalCode" placeholder="230001" />
                </div>
              </div>
            </div>

            <!-- Delivery Information -->
            <div class="form-section">
              <h2 class="section-title">Informaci√≥n de Entrega</h2>

              <div class="form-group checkbox-group">
                <label class="checkbox-label">
                  <input type="checkbox" id="sameAsBilling" name="sameAsBilling" checked />
                  <span class="checkbox-custom"></span>
                  <span>Usar la misma direcci√≥n de facturaci√≥n</span>
                </label>
              </div>

              <div id="delivery-fields" class="form-grid" style="display: none;">
                <div class="form-group">
                  <label for="deliveryFirstName">Nombre <span class="required">*</span></label>
                  <input type="text" id="deliveryFirstName" name="deliveryFirstName" placeholder="Juan" />
                </div>

                <div class="form-group">
                  <label for="deliveryLastName">Apellido <span class="required">*</span></label>
                  <input type="text" id="deliveryLastName" name="deliveryLastName" placeholder="P√©rez" />
                </div>

                <div class="form-group full-width">
                  <label for="deliveryAddress">Direcci√≥n <span class="required">*</span></label>
                  <input type="text" id="deliveryAddress" name="deliveryAddress" placeholder="Calle 123 #45-67" />
                </div>

                <div class="form-group">
                  <label for="deliveryCity">Ciudad <span class="required">*</span></label>
                  <input type="text" id="deliveryCity" name="deliveryCity" placeholder="Monter√≠a" />
                </div>

                <div class="form-group">
                  <label for="deliveryDepartment">Departamento <span class="required">*</span></label>
                  <select id="deliveryDepartment" name="deliveryDepartment">
                    <option value="">Seleccione...</option>
                    <option value="C√≥rdoba">C√≥rdoba</option>
                    <option value="Sucre">Sucre</option>
                    <option value="Bol√≠var">Bol√≠var</option>
                    <option value="Antioquia">Antioquia</option>
                    <option value="Otro">Otro</option>
                  </select>
                </div>
              </div>
            </div>

            <!-- Shipping Method -->
            <div class="form-section">
              <h2 class="section-title">M√©todo de Env√≠o</h2>
              <div class="radio-group">
                <label class="radio-label">
                  <input type="radio" name="shippingMethod" value="standard" checked />
                  <span class="radio-custom"></span>
                  <div class="radio-content">
                    <span class="radio-title">Env√≠o Est√°ndar</span>
                    <span class="radio-description">3-5 d√≠as h√°biles</span>
                  </div>
                </label>
                <label class="radio-label">
                  <input type="radio" name="shippingMethod" value="express" />
                  <span class="radio-custom"></span>
                  <div class="radio-content">
                    <span class="radio-title">Env√≠o Express</span>
                    <span class="radio-description">1-2 d√≠as h√°biles - Costo adicional</span>
                  </div>
                </label>
                <label class="radio-label">
                  <input type="radio" name="shippingMethod" value="pickup" />
                  <span class="radio-custom"></span>
                  <div class="radio-content">
                    <span class="radio-title">Recoger en Tienda</span>
                    <span class="radio-description">Sin costo adicional</span>
                  </div>
                </label>
              </div>
            </div>

            <!-- Payment Method -->
            <div class="form-section">
              <h2 class="section-title">M√©todo de Pago</h2>
              <div class="radio-group">
                <label class="radio-label">
                  <input type="radio" name="paymentMethod" value="transfer" checked />
                  <span class="radio-custom"></span>
                  <div class="radio-content">
                    <span class="radio-title">Transferencia Bancaria</span>
                    <span class="radio-description">Recibir√°s los datos bancarios por correo</span>
                  </div>
                </label>
                <label class="radio-label">
                  <input type="radio" name="paymentMethod" value="cash" />
                  <span class="radio-custom"></span>
                  <div class="radio-content">
                    <span class="radio-title">Pago Contra Entrega</span>
                    <span class="radio-description">Paga cuando recibas tu pedido</span>
                  </div>
                </label>
              </div>
            </div>

            <!-- Order Comments -->
            <div class="form-section">
              <h2 class="section-title">Comentarios del Pedido (Opcional)</h2>
              <div class="form-group">
                <textarea id="comments" name="comments" rows="4" placeholder="A√±ade cualquier nota especial sobre tu pedido..."></textarea>
              </div>
            </div>
          </form>
        </div>

        <!-- Right Column: Order Summary -->
        <div class="order-summary-column">
          <div class="order-summary-sticky">
            <div class="order-summary-card">
              <h2 class="summary-title">Resumen del Pedido</h2>

              <div id="checkout-items-summary" class="items-summary">
                <!-- Items will be inserted here -->
              </div>

              <div id="empty-cart-message" class="empty-cart" style="display: none;">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="9" cy="21" r="1"></circle>
                  <circle cx="20" cy="21" r="1"></circle>
                  <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                </svg>
                <p>Tu carrito est√° vac√≠o</p>
                <a href="/#productos" class="btn-continue">Ver Productos</a>
              </div>

              <div class="summary-totals">
                <div class="summary-row">
                  <span>Subtotal</span>
                  <span id="checkout-subtotal">$0</span>
                </div>
                <div class="summary-row">
                  <span>Env√≠o</span>
                  <span id="checkout-shipping">Por calcular</span>
                </div>
                <div class="summary-row total-row">
                  <span>Total</span>
                  <span id="checkout-total">$0</span>
                </div>
              </div>

              <button type="submit" form="checkout-form" class="btn-submit">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14"></path>
                  <path d="m12 5 7 7-7 7"></path>
                </svg>
                Confirmar Pedido
              </button>

              <p class="security-note">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                  <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                </svg>
                Tus datos est√°n protegidos y seguros
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <FooterMiro />
</Layout>

<style>
  .checkout-page {
    min-height: 100vh;
    background: var(--color-gray-50);
    padding: var(--spacing-10) 0;
  }

  .checkout-wrapper {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--spacing-8);
    align-items: start;
  }

  /* Breadcrumb */
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    margin-bottom: var(--spacing-6);
    font-size: var(--text-sm);
  }

  .breadcrumb-link {
    color: var(--color-gray-600);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .breadcrumb-link:hover {
    color: var(--color-primary);
  }

  .breadcrumb-separator {
    color: var(--color-gray-400);
  }

  .breadcrumb-current {
    color: var(--color-black);
    font-weight: var(--font-semibold);
  }

  /* Page Title */
  .page-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-extrabold);
    color: var(--color-black);
    margin-bottom: var(--spacing-8);
  }

  /* Form Column */
  .checkout-form-column {
    background: var(--color-white);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-8);
    box-shadow: var(--shadow-md);
  }

  .checkout-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-8);
  }

  /* Form Sections */
  .form-section {
    padding-bottom: var(--spacing-6);
    border-bottom: 1px solid var(--color-gray-200);
  }

  .form-section:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .section-title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-black);
    margin: 0 0 var(--spacing-5) 0;
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
  }

  .section-title::before {
    content: '';
    width: 4px;
    height: 24px;
    background: var(--color-primary);
    border-radius: var(--radius-full);
  }

  /* Form Grid */
  .form-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-4);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
  }

  .form-group.full-width {
    grid-column: 1 / -1;
  }

  .form-group label {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-black);
  }

  .required {
    color: #dc2626;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: var(--spacing-3) var(--spacing-4);
    border: 2px solid var(--color-gray-300);
    border-radius: var(--radius-lg);
    font-size: var(--text-base);
    font-family: var(--font-primary);
    color: var(--color-black);
    background: var(--color-white);
    transition: all var(--transition-fast);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(255, 215, 0, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 100px;
  }

  /* Radio and Checkbox Groups */
  .radio-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
  }

  .radio-label,
  .checkbox-label {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-3);
    padding: var(--spacing-4);
    background: var(--color-gray-50);
    border: 2px solid var(--color-gray-200);
    border-radius: var(--radius-xl);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .radio-label:hover,
  .checkbox-label:hover {
    border-color: var(--color-primary);
    background: var(--color-primary-light);
  }

  .radio-label input[type="radio"],
  .checkbox-label input[type="checkbox"] {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .radio-custom,
  .checkbox-custom {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    border: 2px solid var(--color-gray-400);
    border-radius: 50%;
    position: relative;
    transition: all var(--transition-fast);
  }

  .checkbox-custom {
    border-radius: var(--radius-sm);
  }

  input[type="radio"]:checked + .radio-custom,
  input[type="checkbox"]:checked + .checkbox-custom {
    border-color: var(--color-primary);
    background: var(--color-primary);
  }

  input[type="radio"]:checked + .radio-custom::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 8px;
    height: 8px;
    background: var(--color-black);
    border-radius: 50%;
  }

  input[type="checkbox"]:checked + .checkbox-custom::after {
    content: '‚úì';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--color-black);
    font-size: 14px;
    font-weight: var(--font-bold);
  }

  .radio-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1);
    flex: 1;
  }

  .radio-title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    color: var(--color-black);
  }

  .radio-description {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
  }

  /* Order Summary Column */
  .order-summary-column {
    position: relative;
  }

  .order-summary-sticky {
    position: sticky;
    top: calc(60px + var(--spacing-6));
  }

  .order-summary-card {
    background: var(--color-white);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-6);
    box-shadow: var(--shadow-lg);
    border: 2px solid var(--color-gray-200);
  }

  .summary-title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-black);
    margin: 0 0 var(--spacing-5) 0;
    padding-bottom: var(--spacing-4);
    border-bottom: 2px solid var(--color-primary);
  }

  /* Items Summary */
  .items-summary {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
    margin-bottom: var(--spacing-5);
    max-height: 300px;
    overflow-y: auto;
    padding-right: var(--spacing-2);
  }

  .summary-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    padding: var(--spacing-3);
    background: var(--color-gray-50);
    border-radius: var(--radius-lg);
  }

  .summary-item-image {
    width: 60px;
    height: 60px;
    flex-shrink: 0;
    background: linear-gradient(135deg, #FAFAFA 0%, #F4F4F5 100%);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: var(--spacing-2);
  }

  .summary-item-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .summary-item-info {
    flex: 1;
    min-width: 0;
  }

  .summary-item-name {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-black);
    margin: 0 0 var(--spacing-1) 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .summary-item-quantity {
    font-size: var(--text-xs);
    color: var(--color-gray-500);
    margin: 0;
  }

  .summary-item-price {
    font-size: var(--text-base);
    font-weight: var(--font-bold);
    color: var(--color-black);
    white-space: nowrap;
  }

  .empty-cart {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-8) var(--spacing-4);
    text-align: center;
    color: var(--color-gray-500);
  }

  .empty-cart svg {
    margin-bottom: var(--spacing-3);
    color: var(--color-gray-400);
  }

  .empty-cart p {
    margin-bottom: var(--spacing-4);
  }

  .btn-continue {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-3) var(--spacing-5);
    background: var(--color-primary);
    color: var(--color-black);
    text-decoration: none;
    border-radius: var(--radius-lg);
    font-weight: var(--font-semibold);
    transition: all var(--transition-base);
  }

  .btn-continue:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
  }

  /* Summary Totals */
  .summary-totals {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
    padding: var(--spacing-4) 0;
    border-top: 1px solid var(--color-gray-300);
    margin-bottom: var(--spacing-5);
  }

  .summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--text-base);
    color: var(--color-gray-600);
  }

  .total-row {
    font-size: var(--text-xl);
    font-weight: var(--font-extrabold);
    color: var(--color-black);
    padding-top: var(--spacing-3);
    border-top: 2px solid var(--color-primary);
  }

  /* Submit Button */
  .btn-submit {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
    padding: var(--spacing-4);
    background: var(--color-primary);
    color: var(--color-black);
    border: none;
    border-radius: var(--radius-lg);
    font-size: var(--text-base);
    font-weight: var(--font-bold);
    cursor: pointer;
    transition: all var(--transition-base);
    box-shadow: 0 4px 12px rgba(255, 215, 0, 0.3);
  }

  .btn-submit:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(255, 215, 0, 0.4);
  }

  .btn-submit:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  .security-note {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
    margin-top: var(--spacing-4);
    font-size: var(--text-xs);
    color: var(--color-gray-500);
  }

  .security-note svg {
    color: var(--color-gray-400);
  }

  /* Responsive */
  @media (max-width: 968px) {
    .checkout-wrapper {
      grid-template-columns: 1fr;
    }

    .order-summary-sticky {
      position: static;
    }

    .order-summary-column {
      order: -1;
    }

    .form-grid {
      grid-template-columns: 1fr;
    }

    .checkout-form-column {
      padding: var(--spacing-6);
    }

    .page-title {
      font-size: var(--text-3xl);
    }
  }

  /* Scrollbar for items */
  .items-summary::-webkit-scrollbar {
    width: 6px;
  }

  .items-summary::-webkit-scrollbar-track {
    background: transparent;
  }

  .items-summary::-webkit-scrollbar-thumb {
    background: var(--color-gray-300);
    border-radius: var(--radius-full);
  }

  .items-summary::-webkit-scrollbar-thumb:hover {
    background: var(--color-gray-400);
  }
</style>

<script>
  interface CartItem {
    id: string;
    name: string;
    model: string;
    price: number;
    image?: string;
    quantity: number;
  }

  class CheckoutPage {
    private form: HTMLFormElement | null = null;
    private cartItems: CartItem[] = [];

    constructor() {
      this.init();
    }

    private init() {
      this.form = document.getElementById('checkout-form') as HTMLFormElement;
      this.loadCartItems();
      this.renderOrderSummary();
      this.setupEventListeners();
      this.checkCartEmpty();
    }

    private setupEventListeners() {
      // Customer type toggle
      const customerTypeRadios = document.querySelectorAll('input[name="customerType"]');
      customerTypeRadios.forEach(radio => {
        radio.addEventListener('change', (e) => {
          const value = (e.target as HTMLInputElement).value;
          const companyFields = document.querySelectorAll('.company-field');
          companyFields.forEach(field => {
            (field as HTMLElement).style.display = value === 'company' ? 'block' : 'none';
          });
        });
      });

      // Same as billing checkbox
      const sameAsBillingCheckbox = document.getElementById('sameAsBilling') as HTMLInputElement;
      sameAsBillingCheckbox?.addEventListener('change', (e) => {
        const deliveryFields = document.getElementById('delivery-fields');
        if (deliveryFields) {
          deliveryFields.style.display = (e.target as HTMLInputElement).checked ? 'none' : 'grid';
        }
      });

      // Form submission
      this.form?.addEventListener('submit', (e) => {
        e.preventDefault();
        this.handleSubmit();
      });
    }

    private loadCartItems() {
      try {
        const saved = localStorage.getItem('cart');
        if (saved) {
          this.cartItems = JSON.parse(saved);
        }
      } catch (e) {
        console.error('Error loading cart:', e);
        this.cartItems = [];
      }
    }

    private checkCartEmpty() {
      const itemsSummary = document.getElementById('checkout-items-summary');
      const emptyMessage = document.getElementById('empty-cart-message');
      const submitBtn = document.querySelector('.btn-submit') as HTMLButtonElement;

      if (this.cartItems.length === 0) {
        if (itemsSummary) itemsSummary.style.display = 'none';
        if (emptyMessage) emptyMessage.style.display = 'flex';
        if (submitBtn) submitBtn.disabled = true;
      } else {
        if (itemsSummary) itemsSummary.style.display = 'flex';
        if (emptyMessage) emptyMessage.style.display = 'none';
        if (submitBtn) submitBtn.disabled = false;
      }
    }

    private renderOrderSummary() {
      const summaryContainer = document.getElementById('checkout-items-summary');
      const subtotalElement = document.getElementById('checkout-subtotal');
      const totalElement = document.getElementById('checkout-total');

      if (!summaryContainer) return;

      summaryContainer.innerHTML = this.cartItems.map(item => `
        <div class="summary-item">
          <div class="summary-item-image">
            ${item.image ? `<img src="${item.image}" alt="${item.name}" />` : 'üì¶'}
          </div>
          <div class="summary-item-info">
            <p class="summary-item-name">${item.name}</p>
            <p class="summary-item-quantity">Cantidad: ${item.quantity}</p>
          </div>
          <span class="summary-item-price">${this.formatPrice(item.price * item.quantity)}</span>
        </div>
      `).join('');

      const subtotal = this.cartItems.reduce((sum, item) => sum + (item.price * item.quantity), 0);
      if (subtotalElement) subtotalElement.textContent = this.formatPrice(subtotal);
      if (totalElement) totalElement.textContent = this.formatPrice(subtotal);
    }

    private formatPrice(price: number): string {
      return `$${price.toFixed(3).replace(/\B(?=(\d{3})+(?!\d))/g, '.')}`;
    }

    private handleSubmit() {
      const formData = new FormData(this.form!);
      const data = Object.fromEntries(formData.entries());

      console.log('Order submitted:', {
        customer: data,
        items: this.cartItems,
        total: this.cartItems.reduce((sum, item) => sum + (item.price * item.quantity), 0)
      });

      // Show success message
      alert('¬°Pedido realizado con √©xito!\n\nRecibir√°s un correo con los detalles de tu pedido y las instrucciones de pago.\n\nN√∫mero de pedido: #' + Math.floor(Math.random() * 100000));

      // Clear cart
      localStorage.removeItem('cart');

      // Redirect to home
      window.location.href = '/';
    }
  }

  // Initialize checkout page
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      new CheckoutPage();
    });
  } else {
    new CheckoutPage();
  }
</script>
